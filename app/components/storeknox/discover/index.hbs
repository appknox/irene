<AkStack
  @direction='row'
  @alignItems='center'
  @justifyContent='space-between'
  local-class='header-storeknox-discover-page'
>
  <AkStack @direction='column' @spacing='0.5'>
    <AkTypography
      @variant='subtitle1'
      data-test-storeknoxDiscover-header-discoverHeaderText
    >
      {{t 'storeknox.discoverHeader'}}
    </AkTypography>

    <AkTypography
      @variant='body2'
      local-class='description-storeknox-discover-page'
      data-test-storeknoxDiscover-header-discoverDescriptionText
    >
      {{t 'storeknox.discoverDescription'}}
    </AkTypography>
  </AkStack>

  <AkButton>
    <AkLink
      @underline='none'
      @color='inherit'
      @route='authenticated.storeknox.inventory.app-list'
      data-test-storeknoxInventory-inventoryAppListPageLink
    >
      {{t 'storeknox.appInventory'}}
    </AkLink>
  </AkButton>
</AkStack>

<AkTabs local-class='discover-tabs' as |Akt|>
  {{#each this.tabItems as |item|}}
    <Akt.tabItem
      @id={{item.id}}
      @route={{item.route}}
      @currentWhen={{item.activeRoutes}}
      @hasBadge={{item.hasBadge}}
      @badgeCount={{item.badgeCount}}
      data-test-storeknox-discovery-tabs='{{item.id}}-tab'
    >
      {{item.label}}
    </Akt.tabItem>
  {{/each}}
</AkTabs>

{{#if this.showWelcomeModal}}
  <AkModal
    @showHeader={{true}}
    @headerTitle={{t 'storeknox.welcomeTitle'}}
    @onClose={{this.closeWelcomeModal}}
    @noGutter={{true}}
  >
    <Storeknox::Discover::WelcomeModal @takeAction={{this.closeWelcomeModal}} />
  </AkModal>
{{/if}}