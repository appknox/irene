<AkStack @alignItems='center' @spacing='1.5'>
  {{#if @loading}}
    <AkStack @alignItems='center'>
      <AppLogo @loading={{true}} />

      <AkStack @direction='column' @spacing='0.5' class='pl-1'>
        <AkSkeleton @width='180px' @height='16px' />

        <AkSkeleton @width='115px' @height='16px' />
      </AkStack>
    </AkStack>
  {{else}}
    <AppLogo @src={{@data.iconUrl}} @role='none' />

    <AkStack
      @direction='column'
      @spacing='0.5'
      {{style maxWidth='calc(100% - 40px)'}}
    >
      <AkTypography
        @color='secondary'
        @noWrap={{true}}
        @variant='h6'
        @underline='always'
        title={{@data.title}}
        class='pr-4'
        {{style width='100%'}}
      >
        {{@data.title}}
      </AkTypography>

      <AkTypography
        @color='neutral'
        @noWrap={{true}}
        title={{@data.package_name}}
        class='pr-4'
        {{style width='100%'}}
      >
        {{@data.package_name}}
      </AkTypography>
    </AkStack>
  {{/if}}
</AkStack>