<AkStack @alignItems='center' @spacing='1.5'>
  {{#if @loading}}
    <AkStack @alignItems='center'>
      <AppLogo @loading={{true}} />

      <AkStack @direction='column' @spacing='0.5' class='pl-1'>
        <AkSkeleton @width='180px' @height='16px' />

        <AkSkeleton @width='115px' @height='16px' />
      </AkStack>
    </AkStack>
  {{else}}
    <AppLogo @src={{@data.iconUrl}} @role='none' />

    <AkStack
      @direction='column'
      @spacing='0.5'
      {{style maxWidth='calc(100% - 40px)'}}
    >
      <a
        href={{@data.appUrl}}
        target='_blank'
        rel='noopener noreferrer'
        class='w-full'
      >
        <AkTypography
          @color='secondary'
          @noWrap={{true}}
          @variant='h6'
          @underline='always'
          title={{@data.title}}
          {{style width='100%'}}
        >
          {{@data.title}}
        </AkTypography>
      </a>

      <AkTypography
        @color='neutral'
        @noWrap={{true}}
        title={{@data.packageName}}
        {{style width='100%'}}
      >
        {{@data.packageName}}
      </AkTypography>
    </AkStack>
  {{/if}}
</AkStack>