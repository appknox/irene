<AkStack @direction='column' @spacing='0.5'>

  <AkTypography
    @color='secondary'
    @noWrap={{true}}
    title={{@data.companyName}}
    class='pr-4'
    {{style width='100%'}}
  >
    {{@data.companyName}}
  </AkTypography>

  {{#if @data.mailId}}
    <AkTypography
      @color='neutral'
      @noWrap={{true}}
      title={{@data.mailId}}
      class='pr-4'
    >
      {{@data.mailId}}
    </AkTypography>
  {{else}}
    <AkTypography @color='neutral' @noWrap={{true}} class='pr-4'>
      {{t 'noDataAvailable'}}
    </AkTypography>
  {{/if}}
</AkStack>