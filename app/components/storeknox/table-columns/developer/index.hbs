{{#if @loading}}
  <AkStack @direction='column' @spacing='0.5'>
    <AkSkeleton @width='180px' @height='16px' />

    <AkSkeleton @width='115px' @height='16px' />
  </AkStack>
{{else}}
  <AkStack @direction='column' @spacing='0.5'>
    <AkTypography
      @color='secondary'
      @noWrap={{true}}
      title={{@data.devName}}
      {{style width='100%'}}
    >
      {{@data.devName}}
    </AkTypography>

    {{#if @data.devEmail}}
      <AkTypography @color='neutral' @noWrap={{true}} title={{@data.devEmail}}>
        {{@data.devEmail}}
      </AkTypography>
    {{else}}
      <AkTypography @color='neutral' @noWrap={{true}} class='pr-4'>
        {{t 'noDataAvailable'}}
      </AkTypography>
    {{/if}}
  </AkStack>
{{/if}}