<AkStack
  @width='full'
  @direction='column'
  local-class='storeknox-upselling-root'
>
  <AkStack
    @width='full'
    @justifyContent='center'
    @alignItems='center'
    local-class='storeknox-upselling-illustration'
  >
    <AkSvg::StoreknoxUpsellingUi />
  </AkStack>

  <AkStack
    @direction='column'
    @spacing='4'
    local-class='storeknox-upselling-features'
  >
    <AkStack @direction='column'>
      <AkStack @direction='column' @spacing='2' class='mb-2'>
        <AkTypography @variant='h5'>
          {{t 'storeknox.upsellingMessages.header1'}}
        </AkTypography>

        <AkTypography @fontWeight='medium'>
          {{t 'storeknox.upsellingMessages.header2'}}
        </AkTypography>
      </AkStack>

      <AkStack @direction='column' @spacing='1'>
        {{#each this.storeknoxFeatureList as |feature|}}
          <AkStack @spacing='0.5' @alignItems='center'>
            <AkIcon @size='small' @iconName='check-circle' @color='success' />

            <AkTypography>
              {{feature}}
            </AkTypography>
          </AkStack>
        {{/each}}
      </AkStack>

    </AkStack>

    <AkButton>
      <AkLink
        @underline='none'
        @color='inherit'
        @route='authenticated.storeknox.inventory.app-list'
      >
        {{t 'storeknox.storeknoxInventory'}}
      </AkLink>
    </AkButton>
  </AkStack>
</AkStack>