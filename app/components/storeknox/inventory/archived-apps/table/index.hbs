{{#if this.hasNoApps}}
  <AkStack
    @direction='column'
    @alignItems='center'
    local-class='empty-container'
    data-test-storeknoxInventory-archivedApps-empty
  >
    <AkSvg::ProjectListEmpty
      data-test-storeknoxInventory-archivedApps-empty-illustration
    />

    <AkTypography
      @variant='h5'
      @gutterBottom={{true}}
      local-class='header'
      data-test-storeknoxInventory-archivedApps-empty-header
    >
      {{t 'storeknox.noArchivedAppsFound'}}
    </AkTypography>

    <AkTypography
      local-class='body-text'
      data-test-storeknoxInventory-archivedApps-empty-description
    >
      {{t 'storeknox.noArchivedAppsFoundDescription'}}
    </AkTypography>
  </AkStack>

{{else}}
  <AkPaginationProvider
    @results={{this.tableData}}
    @onItemPerPageChange={{this.onItemPerPageChange}}
    @totalItems={{this.totalAppsCount}}
    @nextAction={{this.goToPage}}
    @prevAction={{this.goToPage}}
    @itemPerPageOptions={{array 10 25 50}}
    @defaultLimit={{this.skArchivedAppsService.limit}}
    @offset={{this.skArchivedAppsService.offset}}
    as |pgc|
  >
    <AkTable @hoverable={{not this.disableRowClick}} as |tb|>
      <tb.head @columns={{this.columns}} as |h|>
        <h.row as |r|>
          <r.cell as |column|>
            {{#if column.headerComponent}}
              {{#let (component column.headerComponent) as |Component|}}
                <Component />
              {{/let}}
            {{else}}
              {{column.name}}
            {{/if}}
          </r.cell>
        </h.row>
      </tb.head>

      <tb.body @rows={{pgc.currentPageResults}} as |b|>
        <b.row
          data-test-storeknoxInventory-archivedApps-row
          data-test-storeknoxInventory-archivedApps-row-id='{{b.rowValue.app.id}}'
          {{style cursor=(unless this.disableRowClick 'pointer')}}
          {{on 'click' (fn this.handleRowClick b.rowValue)}}
          as |r|
        >
          <r.cell>
            {{#let (component r.columnValue.cellComponent) as |Component|}}
              <Component
                @loading={{this.isFetchingTableData}}
                @skApp={{r.rowValue.app}}
                @data={{r.rowValue}}
                @reloadArchivedAppsTable={{this.reloadArchivedAppsTable}}
              />
            {{/let}}
          </r.cell>
        </b.row>
      </tb.body>
    </AkTable>

    {{#unless this.isFetchingTableData}}
      <AkPagination
        @disableNext={{pgc.disableNext}}
        @nextAction={{pgc.nextAction}}
        @disablePrev={{pgc.disablePrev}}
        @prevAction={{pgc.prevAction}}
        @endItemIdx={{pgc.endItemIdx}}
        @startItemIdx={{pgc.startItemIdx}}
        @itemPerPageOptions={{pgc.itemPerPageOptions}}
        @onItemPerPageChange={{pgc.onItemPerPageChange}}
        @selectedOption={{pgc.selectedOption}}
        @tableItemLabel={{t 'apps'}}
        @perPageTranslation={{t 'recordPerPage'}}
        @totalItems={{pgc.totalItems}}
      />
    {{/unless}}
  </AkPaginationProvider>
{{/if}}