{{#if @loading}}
  <AkStack @justifyContent='center'>
    <AkSkeleton @width='50px' @height='30px' />
  </AkStack>
{{else if this.isPending}}
  {{#if this.buttonsLoading}}
    <AkLoader @size={{16}} />
  {{else}}
    <AkStack @spacing='1' @justifyContent='center'>
      <AkIconButton
        @variant='outlined'
        {{on 'click' this.handleApproveApp}}
        data-test-storeknoxInventory-pendingReviewTable-approveBtn
      >
        <AkIcon
          @color='success'
          @iconName='done'
          data-test-storeknoxInventory-pendingReviewTable-approveBtnIcon
        />
      </AkIconButton>

      <AkIconButton
        @variant='outlined'
        {{on 'click' this.handleRejectApp}}
        data-test-storeknoxInventory-pendingReviewTable-rejectBtn
      >
        <AkIcon
          @color='error'
          @iconName='close'
          data-test-storeknoxInventory-pendingReviewTable-rejectBtnIcon
        />
      </AkIconButton>
    </AkStack>
  {{/if}}

