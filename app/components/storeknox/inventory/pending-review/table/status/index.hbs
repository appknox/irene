{{#if @loading}}
  <AkStack @justifyContent='center'>
    <AkSkeleton @width='50px' @height='30px' />
  </AkStack>
{{else if this.isPending}}
  {{#if this.buttonsLoading}}
    <AkLoader @size={{16}} />
  {{else}}
    <AkStack @spacing='1' @justifyContent='center'>
      <AkIconButton @variant='outlined' {{on 'click' this.handleApproveApp}}>
        <AkIcon @color='success' @iconName='done' />
      </AkIconButton>

      <AkIconButton @variant='outlined' {{on 'click' this.handleRejectApp}}>
        <AkIcon @color='error' @iconName='close' />
      </AkIconButton>
    </AkStack>
  {{/if}}
{{else}}
  <AkStack @justifyContent='center' @direction='column'>
    <AkTypography @color={{this.statusDetails.color}}>
      {{this.statusDetails.text}}
    </AkTypography>

    <AkStack @alignItems='center' @spacing='0.5'>
      <AkTypography>
        {{t 'by'}}
        {{this.statusDetails.by}}
      </AkTypography>

      <AkTooltip @placement='bottom' @arrow={{true}} @color='light'>
        <:tooltipContent>
          <AkStack @spacing='0.5' @alignItems='center'>
            <AkIcon @iconName='check-circle' @size='small' />

            <AkTypography @color='inherit'>
              {{this.statusDetails.date}}
            </AkTypography>
          </AkStack>
        </:tooltipContent>

        <:default>
          <AkIcon @iconName='info' local-class='info-icon' />
        </:default>
      </AkTooltip>
    </AkStack>
  </AkStack>
{{/if}}