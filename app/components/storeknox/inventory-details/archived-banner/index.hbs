{{#if this.skInventoryApp.isArchived}}
  <AkStack
    @width='full'
    local-class='app-inventory-archived-banner-root'
    data-test-storeknoxInventory-archivedApps-banner
  >
    <AkStack
      @width='full'
      @direction='row'
      @alignItems='center'
      local-class='app-inventory-archived-banner-container'
    >
      <AkStack
        @alignItems='center'
        @justifyContent='center'
        local-class='app-inventory-archived-banner-icon'
      >
        <AkIcon
          @iconName='warning'
          @color='inherit'
          data-test-storeknoxInventory-archivedApps-bannerIcon
        />
      </AkStack>

      <AkTypography
        local-class='app-inventory-archived-banner-text'
        data-test-storeknoxInventory-archivedApps-bannerText
      >
        {{t
          'storeknox.archivedBanner'
          htmlSafe=true
          archivedDate=this.archivedOnString
          unarchiveDate=this.unarchiveDateString
        }}
      </AkTypography>
    </AkStack>
  </AkStack>
{{/if}}