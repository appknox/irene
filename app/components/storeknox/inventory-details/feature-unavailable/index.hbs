<AkStack
  @direction='column'
  @spacing='4'
  @alignItems='center'
  @width='full'
  local-class='feature-unavailable-root'
  {{style padding='4.2857em 1.5em'}}
>
  {{yield to='illustration'}}

  <AkStack
    @direction='column'
    @alignItems='center'
    @spacing='0.5'
    {{style maxWidth='485px'}}
  >
    <AkTypography @variant='h5' @align='center'>
      {{@headerTitle}}
    </AkTypography>

    <AkTypography @align='center'>
      {{@headerDescription}}
    </AkTypography>
  </AkStack>
</AkStack>