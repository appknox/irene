<AkStack
  ...attributes
  @direction='column'
  @alignItems='center'
  @width='full'
  local-class='empty-container'
  data-test-am-errorContainer
>

  {{#if @isHistoryTable}}
    <AkSvg::SoxUnscannedHistoryTableEmpty
      local-class='empty-state-vector'
      data-test-am-errorIllustration
    />
  {{else}}
    <AkSvg::SoxUnscannedDetailsTableEmpty
      local-class='empty-state-vector'
      data-test-am-errorIllustration
    />
  {{/if}}

  <AkTypography
    @variant='h5'
    @gutterBottom={{true}}
    data-test-am-emptyHeaderText
  >
    {{@header}}
  </AkTypography>

  <AkTypography local-class='body-text' data-test-am-emptyBodyText>
    {{@body}}
  </AkTypography>
</AkStack>