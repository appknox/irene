<AkStack
  ...attributes
  @direction='column'
  @alignItems='center'
  @justifyContent='center'
  local-class='loading'
>
  <AkSvg::EmptyLoadingList local-class='loading-state-vector' />

  <AkStack @alignItems='center' @spacing='1.5' class='mt-2'>
    <AkLoader @size={{19}} />

    {{#if @loadingText}}
      <AkTypography local-class='loading-text'>
        {{@loadingText}}
      </AkTypography>
    {{/if}}
  </AkStack>
</AkStack>