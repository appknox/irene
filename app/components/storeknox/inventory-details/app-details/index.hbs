<AkStack @direction='column' @spacing='2' @width='full'>
  {{#if this.skInventoryApp.monitoringStatusIsPending}}
    <Storeknox::InventoryDetails::SectionInfo
      @width='full'
      @spacing='4'
      @direction='column'
      @alignItems='center'
      @justifyContent='center'
      class='p-6'
    >
      <AkSvg::SoxMonitoringPending />

      <AkTypography @align='center' {{style maxWidth='500px'}}>
        {{t 'storeknox.monitoringResultsPending'}}
      </AkTypography>
    </Storeknox::InventoryDetails::SectionInfo>
  {{else}}
    <Storeknox::InventoryDetails::AppDetails::ActionsList
      @app={{this.skInventoryApp}}
    />
  {{/if}}

  <AkStack @direction='column' @width='full'>
    <Storeknox::InventoryDetails::SectionHeader>
      <:default>
        <AkTypography @fontWeight='medium'>
          {{t 'storeknox.appDetails'}}
        </AkTypography>
      </:default>
    </Storeknox::InventoryDetails::SectionHeader>

    <Storeknox::InventoryDetails::SectionInfo
      @width='full'
      @spacing='1'
      @alignItems='center'
    >
      <AkStack @direction='column' @width='full' @spacing='1.5'>
        {{#each this.appDetailsInfo as |info idx|}}
          {{#if (gt idx 0)}}
            <AkDivider @color='light' />
          {{/if}}

          <AkStack @alignItems='center' @width='9/12' @spacing='2.5'>
            <AkTypography @color='neutral' {{style width='150px'}}>
              {{info.title}}
            </AkTypography>

            <AkTypography @fontWeight='medium'>
              {{or info.value '-'}}
            </AkTypography>
          </AkStack>
        {{/each}}
      </AkStack>
    </Storeknox::InventoryDetails::SectionInfo>
  </AkStack>

  {{#if this.skInventoryApp.appIsNotAvailableOnAppknox}}
    <AkStack @direction='column' @width='full'>
      <Storeknox::InventoryDetails::SectionHeader>
        <:default>
          <AkTypography @fontWeight='medium'>
            {{t 'storeknox.latestVAResults'}}
          </AkTypography>
        </:default>
      </Storeknox::InventoryDetails::SectionHeader>

      <Storeknox::InventoryDetails::SectionInfo
        @direction='column'
        @alignItems='center'
        @width='full'
        @spacing='3'
        class='py-6'
      >
        <AkSvg::SoxInitiateUpload />

        <AkStack
          @width='full'
          @direction='column'
          @alignItems='center'
          @spacing='1'
        >
          <AkTypography @fontWeight='bold' @align='center'>
            {{t 'storeknox.appNotInAppknoxHeader'}}
          </AkTypography>

          <AkTypography @align='center' {{style maxWidth='430px'}}>
            {{t 'storeknox.appNotInAppknoxDescription'}}
          </AkTypography>
        </AkStack>

        <AkButton @variant='outlined'>
          <:leftIcon>
            <AkIcon @iconName='cloud-upload' @variant='filled' />
          </:leftIcon>

          <:default>
            {{t 'appMonitoringModule.initiateUpload'}}
          </:default>
        </AkButton>
      </Storeknox::InventoryDetails::SectionInfo>
    </AkStack>

  {{else if this.skInventoryApp.coreProjectLatestVersion}}
    <AkStack @direction='column' @width='full'>
      <Storeknox::InventoryDetails::SectionHeader>
        <:default>
          <AkTypography @fontWeight='medium'>
            {{t 'storeknox.latestVAResults'}}
          </AkTypography>
        </:default>
      </Storeknox::InventoryDetails::SectionHeader>

      <Storeknox::InventoryDetails::SectionInfo
        @width='full'
        @spacing='1'
        @alignItems='center'
      >
        <AkStack @direction='column' @width='full' @spacing='1.5'>
          <AkStack @alignItems='center' @width='9/12' @spacing='2.5'>
            <AkTypography @color='neutral' {{style width='150px'}}>
              {{t 'summary'}}
            </AkTypography>

            <Storeknox::InventoryDetails::AppDetails::VaResults
              @app={{this.skInventoryApp}}
            />
          </AkStack>

          <AkDivider @color='light' />

          <AkStack @alignItems='center' @width='9/12' @spacing='2.5'>
            <AkTypography @color='neutral' {{style width='150px'}}>
              {{t 'fileID'}}
            </AkTypography>

            <AkLink
              @route='authenticated.dashboard.file'
              @model={{this.skInventoryApp.coreProjectLatestVersion.id}}
              @color='primary'
              @fontWeight='medium'
              @underline='always'
              target='_blank'
              rel='noopener noreferrer'
            >
              {{this.skInventoryApp.coreProjectLatestVersion.id}}
            </AkLink>
          </AkStack>

          {{#each this.vaResultsData as |info|}}
            <AkDivider @color='light' />

            <AkStack @alignItems='center' @width='9/12' @spacing='2.5'>
              <AkTypography @color='neutral' {{style width='150px'}}>
                {{info.title}}
              </AkTypography>

              <AkTypography @fontWeight='medium'>
                {{info.value}}
              </AkTypography>
            </AkStack>
          {{/each}}
        </AkStack>
      </Storeknox::InventoryDetails::SectionInfo>
    </AkStack>
  {{/if}}

