<AkStack @direction='column' @width='full'>
  <Storeknox::InventoryDetails::SectionHeader
    @color='white'
    {{style height='50px'}}
  >
    <:icon>
      <AkIcon @iconName='auto-graph' @color='textPrimary' />
    </:icon>

    <:default>
      <AkStack
        @width='full'
        @justifyContent='space-between'
        @alignItems='center'
      >
        <AkTypography @fontWeight='medium'>
          Action Needed (2)
        </AkTypography>

        <AkTooltip @title='Last Monitored Date' @color='light' @arrow={{true}}>
          <AkStack @spacing='0.5' local-class='last-monitored-date'>
            <AkIcon @iconName='event' @color='textPrimary' />

            <AkTypography>
              Jun 17, 2021
            </AkTypography>
          </AkStack>
        </AkTooltip>
      </AkStack>
    </:default>
  </Storeknox::InventoryDetails::SectionHeader>

  <Storeknox::InventoryDetails::SectionInfo
    @width='full'
    @spacing='1'
    @alignItems='center'
  >
    {{#each this.actionsList as |action|}}
      <AkLink @route={{action.route}} @models={{action.models}}>
        <Storeknox::InventoryDetails::AppDetails::ActionsList::Button
          @disabled={{action.disabled}}
          @needsAction={{action.needsAction}}
          @label={{action.label}}
        />
      </AkLink>
    {{/each}}
  </Storeknox::InventoryDetails::SectionInfo>
</AkStack>