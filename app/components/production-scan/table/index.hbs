<div local-class='table-container' data-test-production-scan-table>
  <div local-class='table-header'>
    <span local-class='column-header'>Platform</span>
    <span local-class='column-header'>Application Name</span>
    <span local-class='column-header'>Version in Production </span>
    <span local-class='column-header'>Last Scanned Version </span>
    <span local-class='column-header status'>
      <span local-class='text'>Status</span>
      {{fa-icon 'exclamation-circle' class='font-small'}}</span>
  </div>
  <div local-class='table-body'>
    {{#each this.tableData as |project|}}
      <div local-class='table-row'>
        <div local-class='platform platform-{{project.platform}}'>
          {{fa-icon project.platform}}
        </div>
        <div local-class='app-name-container'>
          <span
            local-class='app-namespace'
          >{{project.project.executable_name}}</span>
          <span local-class='app-name'>{{project.project.name}}</span>
        </div>
        <div local-class='production-version'>
          {{project.prod_version}}
        </div>
        <div local-class='last-scanned-version'>
          {{project.version}}
        </div>
        <div local-class='project-status'>
          <ProductionScan::Table::Status @status={{project.status}} />
        </div>
      </div>
    {{/each}}
  </div>
</div>