<AkStack
  @alignItems='flex-end'
  @justifyContent='center'
  local-class='security-menu'
  data-test-security-nav-menu
>
  <AkTabs as |Akt|>
    {{#each this.menuItems as |item|}}
      <Akt.tabItem
        data-test-security-nav-menu-item='{{item.id}}'
        local-class='security-menu-item'
        @id={{item.id}}
        @route={{item.route}}
        @currentWhen={{item.currentWhen}}
      >
        {{item.label}}
      </Akt.tabItem>
    {{/each}}
  </AkTabs>
</AkStack>

{{yield}}