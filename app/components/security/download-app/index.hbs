<AkStack
  @width='full'
  @alignItems='center'
  @direction='column'
  data-test-download-app-container
>
  <AkStack @direction='column' local-class='root-container'>
    <AkTypography
      @variant='h4'
      @fontWeight='bold'
      local-class='title'
      data-test-download-app-title
    >
      Download App
    </AkTypography>

    <AkTypography data-test-download-app-summary>
      Please enter the id of the file you want to download
    </AkTypography>

    <AkStack
      @width='full'
      @direction='column'
      @alignItems='stretch'
      @spacing='3'
      class='pt-3'
    >
      <AkTextField
        @label='File ID'
        @placeholder='Enter the File ID'
        @labelTypographyColor='secondary'
        @labelTypographyVariant='subtitle2'
        @value={{this.fileNumber}}
        @autofocus={{true}}
        data-test-download-app-input
      />

      <AkButton
        @loading={{this.isDownloadingApp}}
        @disabled={{if this.fileNumber false true}}
        {{on 'click' this.downloadApp}}
        data-test-download-app-download-button
      >
        Download
      </AkButton>
    </AkStack>
  </AkStack>
</AkStack>