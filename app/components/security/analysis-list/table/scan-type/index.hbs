<AkStack
  @justifyContent='flex-start'
  @alignItems='center'
  @flexWrap='wrap'
  @spacing='1'
  data-test-securityAnalysisListTable-scanTypes
>
  {{#each this.tags as |tag|}}
    <AkTooltip
      aria-label={{concat (t tag.text) ' scan tag tooltip'}}
      @arrow={{true}}
      @placement='top'
      @color='dark'
      @title='{{t tag.text}} {{t
        (if tag.status "scanCompleted" "scanNotCompleted")
      }}'
    >
      <AkChip
        @variant='semi-filled'
        @size='small'
        @label={{t tag.text}}
        @color={{if tag.status 'success' 'error'}}
      >
        <:icon>
          <AkIcon @iconName={{if tag.status 'check-circle' 'cancel'}} />
        </:icon>
      </AkChip>
    </AkTooltip>
  {{/each}}
</AkStack>