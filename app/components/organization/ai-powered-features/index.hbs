<AkStack
  @width='full'
  @direction='column'
  local-class='ai-powered-features-wrapper'
>
  {{#each this.aiFeaturesList as |feature idx|}}
    {{#if (gt idx 0)}}
      <AkDivider @color='dark' class='my-2' />
    {{/if}}

    <AkStack
      @direction='column'
      @spacing='1'
      local-class='ai-powered-feature-body'
    >
      <PoweredByAi::Chip @clickable={{true}} @drawerInfo={{this.drawerInfo}} />

      <AkStack
        @justifyContent='space-between'
        @width='full'
        @alignItems='center'
      >
        <AkTypography @fontWeight='medium'>
          {{feature.header}}
        </AkTypography>

        <AkTooltip
          @arrow={{true}}
          @placement='bottom'
          @disabled={{feature.enabled}}
        >
          <:tooltipContent>
            {{feature.tooltipContent}}
          </:tooltipContent>

          <:default>
            <AkToggle
              @size='small'
              @checked={{feature.isChecked}}
              @onChange={{this.toggleAiFeature feature.featureKey}}
              @disabled={{not feature.enabled}}
            />
          </:default>
        </AkTooltip>
      </AkStack>

      <AkTypography @variant='body2' @color='textSecondary' class='w-8/12'>
        {{feature.description}}
      </AkTypography>

    </AkStack>
  {{/each}}
</AkStack>

<PoweredByAi::Drawer
  @aiDrawerOpen={{this.aiDrawerOpen}}
  @onClose={{this.closeAiDrawer}}
  @info={{this.drawerInfo}}
  @showButtons={{true}}
  @buttonText={{this.drawerButtonLabel}}
  @onButtonClick={{this.confirmFeatureToggle}}
/>