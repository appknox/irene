{{#if this.me.org.is_owner}}
  <AkStack @justifyContent='center' data-test-member-role-dropdown>
    <AkSelect
      data-test-cy='user-role-select'
      @triggerClass='user-role-select-trigger'
      @disabled={{this.userDisabled}}
      @selected={{this.selectedRole}}
      @options={{this.roles}}
      @onChange={{perform this.selectMemberRole}}
      {{style width='120px'}}
      as |role|
    >
      {{t (user-role role.value)}}
    </AkSelect>
  </AkStack>

{{else}}
  <AkTypography @fontWeight={{@fontWeight}} data-test-member-role-text>
    {{t (user-role @member.role)}}
  </AkTypography>
{{/if}}