<AkStack @direction='column' class='pl-3' {{did-insert this.getProfie}}>

  <AkTypography @variant='h5' @color='textPrimary'>
    {{t 'reportPreferences'}}
  </AkTypography>

  <AkTypography class='mt-1' @variant='body2' @color='textSecondary'>
    {{t 'reportPreferencesChooseTypes'}}
  </AkTypography>
</AkStack>

<AkStack @alignItems='center' class='mt-2 ml-2'>

  <AkFormControlLabel @label={{t 'dynamicScan'}}>

    <AkCheckbox
      @checked={{this.reportPreference.show_dynamic_scan}}
      @onClick={{this.saveDynamic}}
    />
  </AkFormControlLabel>

  <TaskSpin
    @task={{this.saveDynamicReportPreference}}
    data-test-dynamic-task-spinner
  />
</AkStack>

<AkStack @alignItems='center' class='ml-2'>

  <AkFormControlLabel @label={{t 'apiScan'}}>

    <AkCheckbox
      @checked={{this.reportPreference.show_api_scan}}
      @onClick={{this.saveAPI}}
    />
  </AkFormControlLabel>

  <TaskSpin @task={{this.saveAPIReportPreference}} />
</AkStack>

{{#if this.project.isManualScanAvailable}}

  <AkStack @alignItems='center' class='ml-2'>

    <AkFormControlLabel @label={{t 'manualScan'}}>

      <AkCheckbox
        @checked={{this.reportPreference.show_manual_scan}}
        @onClick={{this.saveManual}}
      />
    </AkFormControlLabel>

    <TaskSpin @task={{this.saveManualReportPreference}} />
  </AkStack>
{{/if}}