{{! @glint-nocheck : did-insert, will-destroy, or}}
{{#if @anchorRef}}
  <div
    ...attributes
    class='ak-popover'
    local-class='ak-popover-root'
    {{did-insert (fn this.elementInserted @anchorRef)}}
    {{will-destroy this.elementWillDestroy}}
  >
    {{yield}}

    {{#if @arrow}}
      <span
        data-popper-arrow
        local-class='
          ak-popover-arrow 
          ak-popover-arrow-color-{{or @arrowColor "light"}}'
      ></span>
    {{/if}}
  </div>
{{/if}}