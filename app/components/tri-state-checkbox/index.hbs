<div local-class='container' data-test-container ...attributes>
  {{#if @label}}
    <div
      local-class='check {{if @isOverridden "overridden" "inherited"}}'
      data-test-check
    >
      <label local-class='label'>
        <Input
          @type='checkbox'
          @checked={{@value}}
          {{on 'click' @onToggle}}
          data-test-input
        />
        <span title={{@title}} local-class='label-text' data-test-label>
          {{@label}}
        </span>
      </label>

      {{#if @isToggleRunning}}
        <span local-class='progress-spinner' data-test-progress-spinner>
          <AkLoader @size={{13}} />
        </span>
      {{/if}}

      {{#if @isOverridden}}
        <button
          type='button'
          local-class='reset'
          onclick={{@onOverrideReset}}
          data-test-reset
        >
          <AkIcon
            @iconName='close'
            @size='small'
            local-class='remove-button-icon'
          />
          <AttachTooltip @placement='top' data-test-reset-tooltip>
            {{t 'resetToDefault'}}
          </AttachTooltip>
        </button>
      {{/if}}
    </div>
  {{/if}}
</div>