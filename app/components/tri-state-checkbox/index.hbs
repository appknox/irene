<div local-class='container' data-test-container ...attributes>
  {{#if @label}}
    <div
      local-class='check {{if @isOverridden "overridden" "inherited"}}'
      data-test-check
    >
      <AkFormControlLabel @label={{@label}} title={{@title}} data-test-label>
        <AkCheckbox
          @checked={{@value}}
          @onClick={{@onToggle}}
          data-test-input
        />
      </AkFormControlLabel>

      {{#if @isToggleRunning}}
        <AkLoader class='ml-1' @size={{13}} data-test-progress-spinner />
      {{/if}}

      {{#if @isOverridden}}
        <div local-class='reset-icon-btn-container'>
          <AkTooltip
            @placement='top'
            @title=' {{t "resetToDefault"}}'
            @renderInPlace={{true}}
            @arrow={{true}}
            data-test-reset-tooltip
          >
            <AkIconButton {{on 'click' @onOverrideReset}}>
              <AkIcon
                @iconName='cancel'
                @color='textPrimary'
                @variant='filled'
                @size='small'
                local-class='reset-icon'
                data-test-reset
              />
            </AkIconButton>
          </AkTooltip>
        </div>
      {{/if}}
    </div>
  {{/if}}
</div>