<div local-class='container' data-test-container ...attributes>
  {{#if @label}}
    <div
      local-class='check {{if @isOverridden "overridden" "inherited"}}'
      data-test-check
    >
      <AkFormControlLabel @label={{@label}} title={{@title}}>
        <AkCheckbox @checked={{@value}} @onClick={{@onToggle}} />
      </AkFormControlLabel>

      {{#if @isToggleRunning}}
        <AkLoader class='ml-1' @size={{13}} />
      {{/if}}

      {{#if @isOverridden}}
        <div local-class='reset' {{on 'click' @onOverrideReset}}>
          <AkIcon @iconName='close' @size='small' />
          <AttachTooltip @placement='top' data-test-reset-tooltip>
            {{t 'resetToDefault'}}
          </AttachTooltip>
        </div>
      {{/if}}
    </div>
  {{/if}}
</div>