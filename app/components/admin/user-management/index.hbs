<AkStack
  local-class='header-admin-user-management-page'
  @direction='column'
  @spacing='0.5'
>
  <AkTypography @variant='subtitle1'>
    {{t 'userManagement'}}
  </AkTypography>

  <AkTypography @variant='body2' @color='neutral'>
    lorem ipsum dolor sit amet consectetur adipiscing elit
  </AkTypography>
</AkStack>

<AkTabs class='mb-3' as |Akt|>
  {{#each this.tabItems as |item|}}
    <Akt.tabItem
      @id={{item.id}}
      @badgeBackground={{true}}
      @route={{item.route}}
      data-test-admin-user-tabs='{{item.id}}-tab'
    >
      {{item.label}}
    </Akt.tabItem>
  {{/each}}
</AkTabs>