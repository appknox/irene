<AkStack
  @justifyContent='center'
  @alignItems='center'
  @direction='column'
  @spacing='1'
  local-class='loading-container'
  data-test-main-loader-container
>
  {{#let (component this.currentLoaderImage) as |LoaderImage|}}
    <LoaderImage />
  {{/let}}

  <AkLoader::Linear
    @variant='determinate'
    @progress={{this.fakeProgress}}
    local-class='progress-container'
    data-test-main-loader-linear-progress
  />
</AkStack>