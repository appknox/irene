<AkStack @direction='column' @spacing='1'>
  <AkTypography data-test-nf-systm-file-upload-success-primary-message>
    {{t
      'notificationModule.messages.nf-systm-file-upload-success.prefix'
      htmlSafe=true
      platform_display=@context.platform_display
      package_name=@context.package_name
    }}

    <AkLink
      {{style verticalAlign='unset'}}
      @color='primary'
      @route='authenticated.dashboard.file'
      @model={{@context.file_id}}
      @underline='always'
      @title='{{t "viewFile"}} {{@context.file_id}}'
    >
      {{t 'fileID'}}
      {{@context.file_id}}
    </AkLink>

    {{t
      'notificationModule.messages.nf-systm-file-upload-success.suffix'
      htmlSafe=true
    }}
  </AkTypography>

  <AkTypography data-test-nf-systm-file-upload-success-version @variant='body2'>
    {{t 'versionLowercase'}}:
    {{@context.version}}
    <span local-class='pipe'>|</span>
    {{t 'versionCode'}}:
    {{@context.version_code}}
  </AkTypography>
</AkStack>