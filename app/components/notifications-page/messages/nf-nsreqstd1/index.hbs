<div>
  <div>
    {{@context.requester_username}}
    has
    <strong>requested for
      {{@context.platform_display}}
      namespace
      {{@context.namespace_value}}</strong>.
  </div>

  {{! <div class='pt-1'>
    <AkButton @color='primary'>Approve</AkButton>
    <AkButton @color='neutral' @variant='outlined'>Reject</AkButton>
  </div> }}

  <div class='pt-1'>
    <AkLink
      @color='primary'
      @route='authenticated.organization.namespaces'
      @underline='always'
      @title='View namespaces'
    >
      View namespaces
    </AkLink>
  </div>
</div>