<AkStack class='mt-1' @alignItems='center' @spacing='1'>
  <AkButton
    data-test-namespaceMessage-approve-button
    @color='primary'
    {{on 'click' @onApprove}}
  >
    {{t 'approve'}}
  </AkButton>

  <AkButton
    data-test-namespaceMessage-reject-button
    @color='neutral'
    @variant='outlined'
    {{on 'click' @onReject}}
  >
    {{t 'reject'}}
  </AkButton>
</AkStack>