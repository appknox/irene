<div class='p-3'>
  <AkStack
    @direction='column'
    @spacing='6'
    @width='full'
    @alignItems='flex-start'
    @justifyContent='flex-start'
    @flexWrap='nowrap'
  >
    {{! Title }}
    <AkSkeleton @width='16rem' @height='2.285rem' @variant='rounded' />

    <AkStack
      @direction='column'
      @spacing='1'
      @width='full'
      @alignItems='flex-start'
      @justifyContent='flex-start'
      @flexWrap='nowrap'
    >
      {{! Subtitle }}
      <AkSkeleton @width='12rem' @height='1.143rem' @variant='rounded' />

      {{! Textarea }}
      <AkSkeleton @width='100%' @height='8rem' @variant='rounded' />

      {{! Character count }}
      <AkStack
        @direction='row'
        @width='full'
        @alignItems='flex-start'
        @justifyContent='flex-end'
        @flexWrap='nowrap'
      >
        <AkSkeleton @width='6rem' @height='0.928rem' @variant='rounded' />
      </AkStack>

      {{! Generate button }}
      <AkSkeleton @width='8rem' @height='2.5rem' @variant='rounded' />
    </AkStack>

    {{! Examples section }}
    <AkStack
      @direction='column'
      @spacing='0.5'
      @alignItems='flex-start'
      @justifyContent='flex-start'
      @flexWrap='nowrap'
    >
      <AkSkeleton @width='12rem' @height='1.143rem' @variant='rounded' />

      <AkSkeleton @width='24rem' @height='1rem' @variant='rounded' />

      {{! Category dropdown }}
      <div class='mt-3'>
        <div {{style width='250px'}}>
          <AkSkeleton @width='100%' @height='2.5rem' @variant='rounded' />
        </div>

        {{! Prompts section }}
        <div class='mt-4'>
          <AkSkeleton @width='16rem' @height='1rem' @variant='rounded' />

          <AkStack
            @direction='column'
            @spacing='0.5'
            @alignItems='flex-start'
            @justifyContent='flex-start'
            @flexWrap='nowrap'
            class='mt-1'
          >
            {{! Prompt items }}
            {{#each (array 1 2 3 4 5) as |idx|}}
              <AkStack
                id={{idx}}
                @direction='row'
                @spacing='0.75'
                @alignItems='center'
                @justifyContent='flex-start'
                @flexWrap='nowrap'
              >
                <AkSkeleton
                  @width='1.5rem'
                  @height='1.5rem'
                  @variant='circular'
                />

                <AkSkeleton @width='16rem' @height='1rem' @variant='rounded' />
              </AkStack>
            {{/each}}
          </AkStack>
        </div>
      </div>
    </AkStack>
  </AkStack>
</div>