<div local-class='settings-general-container'>
  <div class='box-container project-preference'>
    <ProjectPreferences
      @profileId={{this.project.activeProfileId}}
      @platform={{this.project.platform}}
      @project={{this.project}}
    />
  </div>
  <div class='box-container'>
    <div class='collaboration-settings'>
      <div class='columns'>
        <div class='column'>
          <h5 class='bold black-text margin-t-q margin-b-1'>{{t
              'proxySettingsTitle'
            }}</h5>
          <div class='margin-b-1'>{{t 'proxySettingsDescription'}}</div>
        </div>
      </div>
      <ProxySettings @profile={{this.profile}} />
    </div>
  </div>
  <div class='box-container'>
    <ApiFilter @profileId={{this.project.activeProfileId}} />
  </div>
  <div class='box-container collaboration-settings'>
    <div class='columns'>
      <div class='column'>
        <h5 class='bold black-text margin-t-q margin-b-1'>{{t
            'teamsAndCollaborators'
          }}</h5>
      </div>
    </div>
    <ProjectTeamList @project={{this.project}} />
    <ProjectCollaboratorList @project={{this.project}} />
  </div>

  {{#if this.organization.selected.features.dynamicscan_automation}}
    <div class='box-container'>
      <DynamicscanAutomationSettings
        @profileId={{this.project.activeProfileId}}
        @project={{this.project}}
      />
    </div>
  {{/if}}

  <div class='box-container'>
    <GithubProject @project={{this.project}} />
  </div>

  <div class='margin-l-1 margin-b-4'>
    <JiraProject @project={{this.project}} />
  </div>
</div>