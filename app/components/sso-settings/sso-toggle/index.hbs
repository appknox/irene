<div class='mt-3' local-class='bordered-box'>
  <div local-class='bordered-box-section'>
    <AkTypography data-test-ssoSettings-ssoTitle @variant='subtitle1'>
      {{t 'ssoAuthentication'}}
    </AkTypography>
  </div>

  <AkStack
    @alignItems='center'
    @spacing='0.5'
    local-class='bordered-box-section'
  >
    <AkFormControlLabel
      data-test-ssoSettings-ssoSwitchLabel
      @labelTypographyVariant='h6'
      @label='{{t "enable"}} {{t "ssoAuthentication"}}'
      @disabled={{this.toggleSSOEnable.isRunning}}
      as |fcl|
    >
      <AkToggle
        data-test-ssoSettings-ssoSwitch
        @disabled={{fcl.disabled}}
        @checked={{this.sso.enabled}}
        @onChange={{perform this.toggleSSOEnable}}
        @size='small'
      />
    </AkFormControlLabel>

    <AkTypography
      data-test-ssoSettings-ssoEnableDesc
      @tag='span'
      @variant='body2'
      @color='textSecondary'
    >
      ({{t 'ssoEnableDesc'}})
    </AkTypography>
  </AkStack>

  {{#if this.sso.enabled}}
    <AkStack
      @alignItems='center'
      @spacing='0.5'
      local-class='bordered-box-section'
    >
      <AkIcon
        @color='textPrimary'
        @iconName='subdirectory-arrow-right'
        class='ml-1'
      />

      <AkFormControlLabel
        data-test-ssoSettings-ssoEnforceLabel
        @labelTypographyVariant='h6'
        @label={{t 'enforceSSO'}}
        @disabled={{this.toggleSSOEnforce.isRunning}}
        as |fcl|
      >
        <AkCheckbox
          data-test-ssoSettings-ssoEnforceCheckbox
          @disabled={{fcl.disabled}}
          @checked={{this.sso.enforced}}
          @onChange={{perform this.toggleSSOEnforce}}
        />
      </AkFormControlLabel>

      <AkTypography
        data-test-ssoSettings-ssoEnforceDesc
        @tag='span'
        @variant='body2'
        @color='textSecondary'
      >
        ({{t 'ssoEnforceDesc'}})
      </AkTypography>
    </AkStack>
  {{/if}}
</div>