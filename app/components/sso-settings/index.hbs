<div local-class="sso-setting" {{did-insert this.initializeComp}}>
  <div local-class="title" data-test-sso-title>
    {{t 'singleSignOn'}}
  </div>
  <div local-class="sub-title" data-test-sso-sub-title>
    {{t 'samlAuth'}}
  </div>
  <div local-class="description" data-test-sso-desc>
    {{t 'samlDesc'}}
  </div>
  <SsoSettings::ServiceProvider
    @spConfig={{spConfig}}
    @spConfigIsManual={{spConfigIsManual}}
    @spMetadata={{this.spMetadata}}
    @spConfigIsXml={{spConfigIsXml}}
    @isLoading={{this.fetchSpMetadata.isRunning}}
    @defaultConfig="manual"
    data-test-sso-sp-config
  />
  <SsoSettings::IdentityProvider
    @idpMetadata={{this.idpMetadata}}
    @idpMetadataXml={{this.idpMetadataXml}}
    @sso={{this.sso}}
    @onToggleDeleteIdpMetadataModal={{this.onToggleDeleteIdpMetadataModal}}
    @onSelectXmlFile={{this.onSelectXmlFile}}
    @onUploadIdpMetadata={{this.onUploadIdpMetadata}}
    data-test-sso-idp-config
  />
  {{#if idpMetadata}}
