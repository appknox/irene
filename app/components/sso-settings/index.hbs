{{#if this.showDeleteIdpMetadataConfirm}}
  <AkModal
    @onClose={{this.onToggleDeleteIdpMetadataModal}}
    @showHeader={{true}}
    @headerTitle="Confirmation"
  >
    <div local-class="delete-idp-confirm-content">
      <div
        local-class="delete-idp-confirm-content-info"
        data-test-idp-delete-modal-desc
      >
        Are you sure you want delete this IdP configuration?
      </div>
      <div local-class="delete-idp-confirm-content-actions">
        <AkButton::PrimaryFilled
          @onClick={{this.onDeleteIdpConfig}}
          data-test-idp-delete-ok
        >
          Ok
        </AkButton::PrimaryFilled>
        <AkButton::NeutralOutlined
          @onClick={{this.onToggleDeleteIdpMetadataModal}}
          data-test-idp-delete-cancel
        >
          Cancel
        </AkButton::NeutralOutlined>
      </div>
    </div>
  </AkModal>
{{/if}}
