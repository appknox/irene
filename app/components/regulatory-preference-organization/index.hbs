{{!-- {{#if this.orgPreference}} --}}
<div data-test-preferences>
  <div class='org-settings-subtitle'>{{t 'regulatoryPreferences'}}</div>
  <div local-class='subtitle'>{{t 'regulatoryPreferencesChooseForAll'}}</div>
  <div local-class='description'>{{t 'regulatoryPreferencesWarning'}}</div>

  <div local-class='preferences'>
    <div data-test-preference-pcidss>
      <label local-class='preference'>
        <Input
          local-class='checkbox'
          @type='checkbox'
          @checked={{this.orgPreference.reportPreference.show_pcidss}}
          onclick={{perform this.savePcidss value='target.checked'}}
          data-test-pcidss-input
        />
        <span local-class='label' data-test-pcidss-label>PCI-DSS</span>
        <TaskSpin @task={{this.savePcidss}} data-test-pcidss-progress-spinner />
      </label>
    </div>

