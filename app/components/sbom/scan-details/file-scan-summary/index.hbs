<AkStack
 @direction='column' 
data-test-fileScanSummary-container
data-test-cy="sbom-metadata-container">
  {{#each this.fileSummary as |fs|}}
    <AkStack
      class='py-1'
      data-test-sbomScanDetails-fileSummaryGroup='{{fs.label}}'
      data-test-cy="sbomscandetails-filesummarygroup"
      data-label="{{fs.label}}"
      
    >
      <AkTypography
        {{style width='180px'}}
        @color='textSecondary'
        data-test-sbomScanDetails-fileSummaryGroup-label
      >
        {{fs.label}}
      </AkTypography>

      {{#if fs.component}}
        {{#let (component fs.component) as |Component|}}
          <Component @sbomFile={{@sbomFile}} />
        {{/let}}
      {{else}}
        {{#if fs.link}}
          <AkLink
            @typographyVariant='h6'
            @color='primary'
            @underline='always'
            @route={{fs.linkArgs.route}}
            @model={{fs.linkArgs.model}}
            data-test-sbomScanDetails-fileSummaryGroup-link
          >
            {{fs.value}}
          </AkLink>
        {{else}}
          <AkTypography
            @variant='h6'
            data-test-sbomScanDetails-fileSummaryGroup-value
            data-test-cy="sbom-metadata-value"
          >
            {{fs.value}}
          </AkTypography>
        {{/if}}
      {{/if}}
    </AkStack>

    {{#unless fs.hideDivider}}
      <AkDivider />
    {{/unless}}
  {{/each}}
</AkStack>