<AkModal @onClose={{@onClose}}>
  <AkStack data-test-sbomApp-noScanContainer @direction='column'>
    <AkStack @width='full' @justifyContent='flex-end'>
      <AkIconButton
        data-test-sbomApp-noScanCloseBtn
        @size='small'
        {{on 'click' @onClose}}
      >
        <AkIcon @iconName='close' />
      </AkIconButton>
    </AkStack>

    <AkStack @width='full' @justifyContent='center'>
      <AkSvg::FileNotFound data-test-sbomApp-noScanSvg />
    </AkStack>

    <AkDivider class='my-3' />

    <AkStack @direction='column' @spacing='0.5' class='px-1'>
      <AkTypography data-test-sbomApp-noScanTitle @variant='subtitle1'>
        {{t 'sbomModule.neverInitiated'}}
      </AkTypography>

      <AkTypography data-test-sbomApp-noScanDescription @color='textSecondary'>
        {{t 'sbomModule.noScanAlertDescription'}}
      </AkTypography>

      <AkButton
        data-test-sbomApp-noScanOkBtn
        class='my-2'
        {{on 'click' @onClose}}
      >
        {{t 'ok'}}
      </AkButton>
    </AkStack>
  </AkStack>
</AkModal>