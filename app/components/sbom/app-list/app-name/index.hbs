<AkStack @alignItems='center' @spacing='1.5'>
  <Sbom::AppLogo @sbomProject={{@sbomProject}} />

  <AkStack
    @direction='column'
    @spacing='0.5'
    {{style maxWidth='calc(100% - 40px)'}}
  >
    <AkTypography
      data-test-sbomApp-packageName
      @noWrap={{true}}
      title={{this.packageName}}
      {{style width='100%'}}
    >
      {{this.packageName}}
    </AkTypography>

    <AkTypography data-test-sbomApp-name @tag='span' @color='textSecondary'>
      {{this.name}}
    </AkTypography>
  </AkStack>
</AkStack>