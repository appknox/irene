<AkIconButton
  data-test-sbomApp-actionBtn
  {{on 'click' this.handleOpenMenu}}
  disabled={{this.hasNoSbomScan}}
>
  <AkIcon @iconName='more-vert' />
</AkIconButton>

<AkMenu
  @anchorRef={{this.anchorRef}}
  @arrow={{true}}
  @onClose={{this.handleCloseMenu}}
  as |akm|
>
  {{#each this.menuItems as |it|}}
    {{#unless it.hidden}}
      <akm.listItem
        data-test-sbomApp-actionMenuItem
        @button={{it.button}}
        @link={{it.link}}
        @route={{it.route}}
        @model={{it.model}}
        @onClick={{it.onClick}}
        @divider={{it.divider}}
        as |li|
      >
        <li.leftIcon>
          <AkIcon
            @variant={{it.iconVariant}}
            @iconName={{it.icon}}
            @color='textPrimary'
          />
        </li.leftIcon>

        <li.text @primaryText={{it.label}} />
      </akm.listItem>
    {{/unless}}
  {{/each}}
</AkMenu>