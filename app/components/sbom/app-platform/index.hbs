<AkStack
  ...attributes
  data-test-appPlatform-container
  local-class='app-platform-icon-container {{if @bordered "bordered"}}'
  @justifyContent='center'
  @alignItems='center'
>
  <span
    data-test-appPlatform-icon
    local-class='app-platform-icon-{{this.platformIconClass}}'
  >
    <AkIcon
      @iconName='{{this.platformIconClass}}'
      local-class='app-platform-icon'
    />
  </span>
</AkStack>