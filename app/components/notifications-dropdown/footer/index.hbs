<AkStack
  @width='full'
  @alignItems='center'
  @justifyContent='center'
  local-class='notification-dropdown-footer'
  class='py-2'
>
  <AkLink
    @color='primary'
    @route={{this.viewAllNotificationsRoute}}
    @underline='always'
    @title='View notifications'
    {{on 'click' this.onClick}}
    data-test-notification-dropdown-link
  >
    <strong>View All Notifications</strong>
  </AkLink>
</AkStack>