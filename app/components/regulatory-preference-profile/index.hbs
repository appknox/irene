{{#if (and @project this.profile)}}
  <AkStack @width='9/12' @direction='column' class='pl-3'>

    <AkTypography @variant='h5' @color='textPrimary'>
      {{t 'regulatoryPreferences'}}
    </AkTypography>

    <AkTypography class='mt-1' @variant='body2' @color='textSecondary'>
      {{t 'regulatoryPreferencesChooseForProfile'}}
      {{t 'regulatoryPreferencesWarning'}}
    </AkTypography>

    <AkTypography
      local-class='note'
      class='mt-1'
      @variant='body2'
      @color='textSecondary'
    >
      ({{t 'regulatoryPreferencesProfileNote'}})
    </AkTypography>
  </AkStack>

  <AkStack @alignItems='center' class='mt-2 ml-2'>

    <AkFormControlLabel @label={{t 'pcidss'}}>

      <AkCheckbox
        @checked={{this.profile.reportPreference.show_pcidss.value}}
        @onClick={{this.onSavePcidss}}
      />
    </AkFormControlLabel>

    <TaskSpin @task={{this.savePcidss}} />
    {{!-- <TriStateCheckbox
      @label='PCI-DSS'
      @title={{t 'pcidssExpansion'}}
      @value={{this.profile.reportPreference.show_pcidss.value}}
      @onToggle={{this.onSavePcidss}}
      @onOverrideReset={{this.onResetPcidss}}
      @isToggleRunning={{this.savePcidss.isRunning}}
      @isOverridden={{not
        this.profile.reportPreference.show_pcidss.is_inherited
      }}
      data-test-preference-pcidss
    /> --}}
  </AkStack>

  <AkStack @alignItems='center' class='ml-2'>

    <AkFormControlLabel @label={{t 'hipaa'}}>

      <AkCheckbox
        @checked={{this.profile.reportPreference.show_hipaa.value}}
        @onClick={{this.onSaveHipaa}}
      />

    </AkFormControlLabel>
    <TaskSpin @task={{this.saveHipaa}} />

    {{!-- <TriStateCheckbox
          @label='HIPAA'
          @title={{t 'hipaaExpansion'}}
          @value={{this.profile.reportPreference.show_hipaa.value}}
          @onToggle={{this.onSaveHipaa}}
          @onOverrideReset={{this.onResetHipaa}}
          @isToggleRunning={{this.saveHipaa.isRunning}}
          @isOverridden={{not
            this.profile.reportPreference.show_hipaa.is_inherited
          }}
          data-test-preference-hipaa
        /> --}}
  </AkStack>
  <AkStack @alignItems='center' class='ml-2'>

    <AkFormControlLabel @label={{t 'gdpr'}}>

      <AkCheckbox
        @checked={{this.profile.reportPreference.show_gdpr.value}}
        @onClick={{this.onSaveGdpr}}
      />

    </AkFormControlLabel>
    <TaskSpin @task={{this.saveGdpr}} />

    {{!-- <TriStateCheckbox
      @label='GDPR'
      @title={{t 'gdprExpansion'}}
      @value={{this.profile.reportPreference.show_gdpr.value}}
      @onToggle={{this.onSaveGdpr}}
      @onOverrideReset={{this.onResetGdpr}}
      @isToggleRunning={{this.saveGdpr.isRunning}}
      @isOverridden={{not this.profile.reportPreference.show_gdpr.is_inherited}}
      data-test-preference-gdpr
    /> --}}
  </AkStack>
{{/if}}