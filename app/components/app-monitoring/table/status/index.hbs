{{! template-lint-disable no-curly-component-invocation }}
<AkStack
  local-class='project-status'
  @direction='column'
  data-test-am-table-row-item
  data-test-am-table-row-status
>
  <AppMonitoring::Status
    @condition='{{am-monitoring-condition @amApp}}'
    @label={{am-monitoring-text @amApp}}
  />

  <AkStack
    local-class='last-sync-date'
    @direction='row'
    @alignItems='center'
    data-test-am-table-row-last-sync
  >
    {{#if @amApp.lastSync.syncedOn}}
      {{t 'appMonitoringModule.lastMonitoredOn'}}

      <AkTypography
        @variant='subtitle2'
        @color='textSecondary'
        class='ml-1'
        data-test-am-table-row-last-sync-date
      >
        {{day-js date=@amApp.lastSync.syncedOn format='DD MMM YYYY'}}
      </AkTypography>

    {{else if @amApp.isActive}}
      <AkStack
        @direction='row'
        @alignItems='center'
        @tag='span'
        class='mr-1'
        data-test-am-table-row-last-sync-spinner
      >
        <AkLoader @size={{13}} />
      </AkStack>

      {{t 'appMonitoringModule.syncInProgress'}}

    {{/if}}
  </AkStack>
</AkStack>