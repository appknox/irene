{{! @glint-nocheck: not, perform}}
<AkStack
  @direction='row'
  @justifyContent='space-between'
  @alignItems='center'
  @width='full'
  local-class='settings-block'
>
  <AkStack @direction='column' @width='10/12'>
    <AkTypography
      @variant='h5'
      @gutterBottom={{true}}
      data-test-app-monitoring-settings-heading
    >
      {{t 'appMonitoringHeading'}}
    </AkTypography>

    <AkTypography
      @variant='body2'
      local-class='settings-description'
      data-test-app-monitoring-settings-description
    >
      {{t 'appMonitoringDescription'}}
    </AkTypography>
  </AkStack>

  <AkToggle
    @size='small'
    @checked={{@settings.enabled}}
    @disabled={{not this.canEditSettings}}
    @onChange={{perform this.toggleAppMonitoringEnabled}}
  />
</AkStack>