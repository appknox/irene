<AkStack
  data-test-home-page
  @direction='column'
  @alignItems='center'
  local-class='home-page-container'
>
  <AkStack @direction='column' @width='10/12' local-class='home-page-content'>
    <AkStack
      data-test-home-page-appLogo
      local-class='logo-container'
      class='py-2'
    >
      <AuthAssets src={{this.logo}} />
    </AkStack>

    <AkStack class='py-2' @width='full' @direction='column' @spacing='0.5'>
      <AkTypography @variant='h5' @fontWeight='regular'>
        {{t 'selectThePath'}}
      </AkTypography>

      <AkStack
        @direction='row'
        @width='full'
        @justifyContent='space-between'
        @alignItems='center'
      >

        <AkTypography
          data-test-home-page-title
          @variant='h2'
          @fontWeight='bold'
        >
          {{t 'toSecureYourMobileApps'}}
        </AkTypography>

        <AkStack @spacing='2'>
          <AkButton
            @variant='outlined'
            @color='neutral'
            local-class='cta-button'
            {{on 'click' this.onClickAdmin}}
            data-test-home-page-logoutBtn
          >
            <:leftIcon>
              <AkIcon @iconName='settings' />
            </:leftIcon>

            <:default>
              {{t 'admin'}}
            </:default>
          </AkButton>

          <AkButton
            @variant='outlined'
            @color='neutral'
            local-class='cta-button'
            {{on 'click' this.userAuth.invalidateSession}}
            data-test-home-page-logoutBtn
          >
            <:leftIcon>
              <AkIcon @iconName='logout' />
            </:leftIcon>

            <:default>
              {{t 'logout'}}
            </:default>
          </AkButton>
        </AkStack>
      </AkStack>
    </AkStack>

    <AkDivider @color='dark' class='mb-2' />

    <AkStack class='py-1' @direction='row' @spacing='4' @flexWrap='wrap'>
      {{#each this.productCardDetails as |productCardDetails|}}
        <HomePage::ProductCard
          @title={{productCardDetails.title}}
          @description={{productCardDetails.description}}
          @route={{productCardDetails.route}}
          @route2={{productCardDetails.route2}}
          @linkText={{productCardDetails.linkText}}
          @link2Text={{productCardDetails.link2Text}}
          @coverBackgroundImage={{productCardDetails.coverBackgroundImage}}
          @isGreyscale={{productCardDetails.isGreyscale}}
          @indicatorSvg={{productCardDetails.indicatorSvg}}
          @openInNewTab={{productCardDetails.openInNewTab}}
          @chipColor={{productCardDetails.chipColor}}
          @chipText={{productCardDetails.chipText}}
          @linkDisabled={{productCardDetails.linkDisabled}}
        />
      {{/each}}
    </AkStack>
  </AkStack>
</AkStack>