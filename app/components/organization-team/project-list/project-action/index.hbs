<AkIconButton
  data-test-teamProjectList-actionBtn
  title='{{t "removeFromTeam"}}'
  {{on 'click' this.openRemoveProjectConfirm}}
>
  <AkIcon @iconName='person-remove' />
</AkIconButton>

<ConfirmBox
  @isActive={{this.showRemoveProjectConfirm}}
  @description={{t 'confirmBox.removeTeamProject'}}
  @delegate={{this}}
  @confirmAction={{perform this.removeProject}}
  @disabled={{this.isRemovingProject}}
  @confirmText={{this.confirmText}}
  @blurOverlay={{true}}
/>