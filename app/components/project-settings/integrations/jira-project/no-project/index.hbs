<AkStack @alignItems='center' @spacing='0.5'>
  <AkTypography
    @color='textSecondary'
    @variant='body2'
    data-test-prjSettings-integrations-jiraProject-noProject
  >
    {{#if @reconnect}}
      {{t 'jira'}}
      {{t 'reconnectGotoSettings'}}
    {{else}}
      {{t 'jiraNoProject'}}
    {{/if}}
  </AkTypography>

  <AkLink
    @typographyVariant='body2'
    @route='authenticated.dashboard.organization-settings.integrations'
    @color='primary'
    data-test-prjSettings-integrations-jiraProject-noProject-integrationLink
  >
    {{t 'clickingHere'}}
  </AkLink>
</AkStack>