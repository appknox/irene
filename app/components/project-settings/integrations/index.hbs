<AkStack
  @direction='column'
  class='mb-3 py-3'
  local-class='prj-settings-integrations-root'
>
  <AkStack @width='full' class='px-3'>
    <ProjectSettings::Integrations::JiraProject @project={{this.project}} />
  </AkStack>

  <AkDivider @color='dark' class='my-3' />

  <AkStack @width='full' class='px-3'>
    <ProjectSettings::Integrations::GithubProject @project={{this.project}} />
  </AkStack>

  <AkDivider @color='dark' class='my-3' />

  <AkStack @width='full' class='px-3'>
    <ProjectSettings::Integrations::ServiceNow @project={{this.project}} />
  </AkStack>
</AkStack>