{{#if this.me.org.is_admin}}
  <AkIconButton
    {{on 'click' this.openRemoveCollaboratorConfirm}}
    data-test-generalSettings-collaboratorsTable-deleteIcon='{{@collaborator.username}}'
  >
    <AkIcon @iconName='delete' />
  </AkIconButton>
{{/if}}

<ConfirmBox
  @isActive={{this.showRemoveCollaboratorConfirm}}
  @description={{t 'confirmBox.removeProjectCollaborator'}}
  @confirmAction={{this.removeProjectCollaborator}}
  @cancelAction={{this.closeRemoveCollaboratorConfirm}}
  @disabled={{this.removeCollaborator.isRunning}}
  @confirmText={{t 'ok'}}
  @blurOverlay={{true}}
/>