<div class='proxy-settings'>
  <form class='vertical-align-center'>
    <AkStack class='mt-2' @spacing='1.5'>
      <AkTextField
        @formControlClass='w-8/12'
        @placeholder={{t 'host'}}
        @value={{this.changeset.host}}
      />

      <AkTextField
        @formControlClass='w-8/12'
        @type='number'
        @placeholder={{t 'port'}}
        @value={{this.changeset.port}}
      />

      <AkButton
        data-test-apiFilter-addApiEndpointBtn
        @loading={{this.saveProxy.isRunning}}
        @variant='outlined'
        {{on 'click' (perform this.saveProxy)}}
      >
        <:default>{{t 'save'}}</:default>
      </AkButton>
    </AkStack>

    {{!-- <div class='margin-r-1'>
      <Input
        class='form-control input'
