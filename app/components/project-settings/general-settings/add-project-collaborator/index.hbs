<AkStack data-test-projectSettings-generalSettings-addProjectCollab-root>
  {{#if this.me.org.is_admin}}
    <AkButton
      @variant='outlined'
      {{on 'click' this.openAddCollaboratorDrawer}}
      data-test-generalSettings-addProjectCollab-button
    >
      <:leftIcon>
        <AkIcon
          @iconName='person'
          data-test-generalSettings-addProjectCollab-buttonIcon
        />
      </:leftIcon>

      <:default>
        {{t 'addCollaborator'}}
      </:default>
    </AkButton>
  {{/if}}

  <AkDrawer
    @open={{this.showAddProjectCollaboratorDrawer}}
    @onClose={{this.closeAddCollaboratorDrawer}}
    @anchor='right'
    data-test-generalSettings-addProjectCollab-drawerContainer
    as |dr|
  >
    <AkStack @direction='column' {{style width='640px'}}>
      <AkAppbar
        @position='sticky'
        @justifyContent='space-between'
        class='px-3'
        as |ab|
      >
        <AkTypography
          @color='inherit'
          @variant='h5'
          @fontWeight='medium'
          data-test-addProjectCollab-drawerContainer-title
        >
          {{t 'projectSettings.drawerTitles.addCollaborator'}}
        </AkTypography>

        <AkIconButton
          {{on 'click' dr.closeHandler}}
          class={{ab.classes.defaultIconBtn}}
          data-test-addProjectCollab-drawerContainer-closeIconBtn
        >
          <AkIcon @iconName='close' />
        </AkIconButton>
      </AkAppbar>

      <ProjectSettings::GeneralSettings::AddProjectCollaborator::Table
        @project={{@project}}
      />
    </AkStack>
  </AkDrawer>
</AkStack>