<AkStack @direction='column' @spacing='3/2' class='mb-3'>
  <AkStack @direction='column'>
    <ProjectPreferences
      @profileId={{@project.activeProfileId}}
      @platform={{@project.platform}}
      @project={{@project}}
    />
  </AkStack>

  <AkDivider @color='light' />

  <AkStack @direction='column' @spacing='2'>
    <AkStack @direction='column' @spacing='0.5'>
      <AkTypography data-test-projectPreference-title @variant='h6'>
        {{t 'proxySettingsTitle'}}
      </AkTypography>

      <AkTypography
        data-test-projectPreference-description
        @variant='body2'
        @color='textSecondary'
      >
        {{t 'proxySettingsDescription'}}
      </AkTypography>
    </AkStack>

    <ProjectSettings::GeneralSettings::ProxySettings
      @profile={{this.profile}}
    />
  </AkStack>
</AkStack>

<div class='box-container'>
  <ApiFilter @profileId={{this.project.activeProfileId}} />
</div>
<div class='box-container collaboration-settings'>
  <div class='columns'>
    <div class='column'>
      <h5 class='bold black-text margin-t-q margin-b-1'>{{t
          'teamsAndCollaborators'
        }}</h5>
    </div>
  </div>
  <ProjectTeamList @project={{this.project}} />
  <ProjectCollaboratorList @project={{this.project}} />
</div>

{{#if this.organization.selected.features.dynamicscan_automation}}
  <div class='box-container'>
    <DynamicscanAutomationSettings
      @profileId={{this.project.activeProfileId}}
      @project={{this.project}}
    />
  </div>
{{/if}}

<div class='box-container'>
  <GithubProject @project={{this.project}} />
</div>

<div class='margin-l-1 margin-b-4'>
  <JiraProject @project={{this.project}} />
</div>