<AkStack class='mt-2 mb-3'>
  <AkSkeleton @width='275px' />
</AkStack>

<AkStack @direction='column' @spacing='2.5'>
  {{! summary }}
  <div local-class='box-section-root'>
    <div class='p-3'>
      <AkStack @alignItems='center' @justifyContent='space-between'>
        <AkStack @spacing='1' @alignItems='center'>
          <AkSkeleton @width='50px' @height='50px' />

          <AkStack @direction='column' @spacing='1'>
            <AkSkeleton @width='275px' />
            <AkSkeleton @width='210px' />
          </AkStack>
        </AkStack>

        <AkStack @spacing='1'>
          <AkSkeleton @width='110px' @height='32px' />
          <AkSkeleton @width='32px' @height='32px' />
        </AkStack>
      </AkStack>
    </div>

    <AkDivider @color='dark' />

    <AkStack @width='full' @direction='column' @spacing='1.5' class='p-3'>
      <AkStack @width='full' @justifyContent='space-between'>
        <AkSkeleton @width='100px' />
        <AkSkeleton @width='50px' />
      </AkStack>
    </AkStack>
  </div>

  {{! scan actions }}
  <AkStack @flexWrap='wrap' @spacing='2' @width='full'>
    {{#each (array 1 2 3 4)}}
      <div local-class='box-section-root scan-actions-status-card'>
        <AkStack @justifyContent='space-between' class='p-2'>
          <AkSkeleton @width='100px' />

          <AkSkeleton @width='70px' />
        </AkStack>

        <AkStack
          @width='full'
          @direction='column'
          @spacing='1'
          class='px-2 py-1 mb-3'
        >
          <AkSkeleton @width='100px' />

          <AkStack @alignItems='center' @spacing='0.5'>
            <AkSkeleton @width='21px' @height='21px' />
            <AkSkeleton @width='28px' @height='21px' />
          </AkStack>
        </AkStack>

        <AkDivider @color='dark' />

        <AkStack class='px-2 py-1'>
          <AkSkeleton @width='100px' />
        </AkStack>
      </div>
    {{/each}}
  </AkStack>

  {{! insights wrapper }}
  <div local-class='box-section-root'>
    <div local-class='box-section-header'>
      <AkStack @spacing='2.5'>
        <AkSkeleton @width='100px' />
        <AkSkeleton @width='100px' />
      </AkStack>
    </div>

    <AkDivider @color='dark' />

    <div class='p-3'>
      {{! severity level }}
      <div local-class='box-section-root'>
        <div local-class='box-section-header'>
          <AkStack @spacing='2.5'>
            <AkSkeleton @width='100px' />
          </AkStack>
        </div>

        <AkDivider @color='dark' />

        <AkStack class='p-3' @spacing='5'>
          <AkSkeleton @width='210px' @height='180px' />

          <AkStack @direction='column' @spacing='1.5'>
            <AkSkeleton @width='200px' />
            <AkSkeleton @width='200px' />
            <AkSkeleton @width='200px' />
            <AkSkeleton @width='200px' />
            <AkSkeleton @width='200px' />
            <AkSkeleton @width='200px' />
          </AkStack>
        </AkStack>
      </div>

      {{! key insights }}
      <div class='mt-3' local-class='box-section-root'>
        <div local-class='box-section-header'>
          <AkStack @spacing='2.5'>
            <AkSkeleton @width='100px' />
          </AkStack>
        </div>

        <AkDivider @color='dark' />

        <AkStack @direction='column' @spacing='2.5' class='p-3'>
          <AkSkeleton @width='75%' />

          <AkStack @spacing='4'>
            <AkStack @direction='column' @spacing='1'>
              <AkSkeleton @width='32px' />
              <AkSkeleton @width='100px' />
            </AkStack>

            <AkStack @direction='column' @spacing='1'>
              <AkSkeleton @width='32px' />
              <AkSkeleton @width='100px' />
            </AkStack>

            <AkStack @direction='column' @spacing='1'>
              <AkSkeleton @width='32px' />
              <AkSkeleton @width='100px' />
            </AkStack>

            <AkStack @direction='column' @spacing='1'>
              <AkSkeleton @width='32px' />
              <AkSkeleton @width='100px' />
            </AkStack>
          </AkStack>

          <AkSkeleton @width='80px' @height='32px' />
        </AkStack>
      </div>
    </div>
  </div>

  {{! vulnerability header }}
  <div local-class='box-section-root'>
    <AkStack
      class='px-3 py-2'
      @justifyContent='space-between'
      @alignItems='center'
    >
      <AkStack @direction='column' @spacing='1'>
        <AkSkeleton @width='275px' />
        <AkSkeleton @width='210px' />
      </AkStack>

      <AkStack @spacing='1'>
        <AkSkeleton @width='100px' @height='32px' />
        <AkSkeleton @width='100px' @height='32px' />
      </AkStack>
    </AkStack>
  </div>

  {{! vulnerability list }}
  <div local-class='box-section-root'>
    <AkStack class='px-3 py-2' @spacing='3' @alignItems='stretch'>
      <AkSkeleton @width='80px' @height='24px' />

      <AkStack
        @width='full'
        @justifyContent='space-between'
        @alignItems='center'
      >
        <AkSkeleton @width='200px' />
        <AkSkeleton @width='70px' />
      </AkStack>
    </AkStack>

    <AkStack class='px-3 py-2' @spacing='3' @alignItems='stretch'>
      <AkSkeleton @width='80px' @height='24px' />

      <AkStack
        @width='full'
        @justifyContent='space-between'
        @alignItems='center'
      >
        <AkSkeleton @width='200px' />
        <AkSkeleton @width='70px' />
      </AkStack>
    </AkStack>

    <AkStack class='px-3 py-2' @spacing='3' @alignItems='stretch'>
      <AkSkeleton @width='80px' @height='24px' />

      <AkStack
        @width='full'
        @justifyContent='space-between'
        @alignItems='center'
      >
        <AkSkeleton @width='200px' />
        <AkSkeleton @width='70px' />
      </AkStack>
    </AkStack>

    <AkStack class='px-3 py-2' @spacing='3' @alignItems='stretch'>
      <AkSkeleton @width='80px' @height='24px' />

      <AkStack
        @width='full'
        @justifyContent='space-between'
        @alignItems='center'
      >
        <AkSkeleton @width='200px' />
        <AkSkeleton @width='70px' />
      </AkStack>
    </AkStack>
  </div>
</AkStack>