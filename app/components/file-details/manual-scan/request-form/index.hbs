<div
  data-test-manualScanRequestForm-container
  local-class='manual-scan-form-container'
>
  <AkStack class='p-3' @direction='column' @spacing='0.5'>
    <AkTypography data-test-manualScanRequestForm-title @variant='subtitle1'>
      {{t 'modalCard.manual.title'}}
    </AkTypography>

    <AkTypography data-test-manualScanRequestForm-description>
      {{t 'modalCard.manual.description'}}
    </AkTypography>
  </AkStack>

  <AkAccordion::Group @defaultOpen={{array 'basic-info'}} as |actx|>
    {{#each this.manualScanFormSections as |msf|}}
      <AkAccordion
        @id={{msf.id}}
        @accordionCtx={{actx}}
        @summaryText={{msf.summaryText}}
      >
        <:content>
          {{#let (component msf.contentComponent) as |Component|}}
            <Component @file={{@file}} @manualscan={{@manualscan}} />
          {{/let}}
        </:content>
      </AkAccordion>
    {{/each}}
  </AkAccordion::Group>
</div>