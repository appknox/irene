<AkStack
  data-test-fileDetails-manualScan-progressStatus-container
  @justifyContent='center'
  class='mt-7'
>
  <div local-class='manual-scan-status-card'>
    <AkStack @direction='column' @alignItems='center' @justifyContent='center'>
      <AkStack
        @direction='column'
        @alignItems='center'
        @width='full'
        class='p-3'
      >
        {{#if @file.isManualDone}}
          <AkSvg::ScanCompleted
            data-test-fileDetails-manualScan-progressStatus-svg='completed'
            class='mt-3'
          />
        {{else}}
          <AkSvg::ScanProgress
            data-test-fileDetails-manualScan-progressStatus-svg='in-progress'
            class='mt-3'
          />
        {{/if}}

        <AkStack
          class='mt-3'
          @direction='column'
          @alignItems='center'
          @spacing='1.5'
        >
          <AkTypography
            data-test-fileDetails-manualScan-progressStatus-title
            @align='center'
            @variant='h5'
          >
            {{this.manualScanStatusText.title}}
          </AkTypography>

          {{#if this.manualScanStatusText.description}}
            <AkTypography
              data-test-fileDetails-manualScan-progressStatus-description
              @align='center'
              @color='textSecondary'
            >
              {{this.manualScanStatusText.description}}
            </AkTypography>
          {{/if}}

          {{#if this.manualScanStatusText.hasChip}}
            <AkChip
              data-test-fileDetails-manualScan-progressStatus-chip
              @variant='semi-filled'
              @label={{this.manualScanStatusText.chipLabel}}
              @color={{this.manualScanStatusText.chipColor}}
            />
          {{/if}}
        </AkStack>
      </AkStack>

      {{#if @file.isManualDone}}
        <AkDivider />

        <AkTypography
          data-test-fileDetails-manualScan-progressStatus-helperText
          @align='center'
          @color='textSecondary'
          local-class='status-helper-text'
          class='py-2 px-3'
        >
          {{t 'modalCard.manual.viewResultsInTab' htmlSafe=true}}
        </AkTypography>
      {{/if}}
    </AkStack>
  </div>
</AkStack>