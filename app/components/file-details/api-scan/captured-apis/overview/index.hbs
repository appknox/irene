<AkStack
  @spacing='1'
  @tag='label'
  data-test-fileDetails-apiScan-capturedApi-endpointContainer
  data-test-fileDetails-apiScan-capturedApi-endpointContainer-item='{{@capturedApi.id}}'
>
  <AkCheckbox
    @checked={{@capturedApi.isActive}}
    @onChange={{perform this.handleToggleApi}}
    @disabled={{this.disableToggleApi}}
    data-test-fileDetails-apiScan-capturedApi-endpointSelectCheckbox
  />

  <AkStack local-class='api-endpoint-container' @spacing='1.5'>
    <AkChip
      data-test-fileDetails-apiScan-capturedApi-endpointMethodChip
      @label={{@capturedApi.request.method}}
      @size='small'
    />

    <AkTypography
      local-class='api-endpoint'
      data-test-fileDetails-apiScan-capturedApi-endpointUrl
    >
      {{request-to-url @capturedApi.request}}

      {{#if this.handleToggleApi.isRunning}}
        <AkLoader class='mx-1' @size={{13}} />
      {{/if}}
    </AkTypography>
  </AkStack>
</AkStack>