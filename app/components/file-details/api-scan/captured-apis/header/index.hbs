<AkStack @width='full' @direction='column'>
  <AkStack
    @width='full'
    @alignItems='center'
    @justifyContent='space-between'
    @spacing='1'
    class='p-2'
  >
    <AkTypography
      @color='textSecondary'
      data-test-fileDetails-apiScan-capturedApi-title
    >
      {{t 'capturedApiListTitle'}}
    </AkTypography>

    <FileDetails::ApiScan::CapturedApis::ApiDomainFilters
      @file={{@file}}
      @projectProfileApiFilters={{@projectProfileApiFilters}}
      @autoGeneratedApiFilters={{@autoGeneratedApiFilters}}
      @selectedAPIUrlDomain={{@selectedAPIUrlDomain}}
      @onDomainFilterApply={{@onDomainFilterApply}}
      @isLoadingCapturedApis={{@isLoadingCapturedApis}}
    />
  </AkStack>

  <AkStack
    @alignItems='center'
    @spacing='1'
    local-class='select-all-captured-api-cta'
    class='w-full px-2 py-1'
  >
    <AkCheckbox
      @disabled={{this.disableSelectAllCapturedApis}}
      @checked={{@allAPIsSelected}}
      @onChange={{@handleSelectAllCapturedApis}}
      data-test-fileDetails-apiScan-selectAllCapturedApis-checkbox
    />

    <AkTypography
      @fontWeight='bold'
      data-test-fileDetails-apiScan-selectAllCapturedApis-text
    >
      {{t 'selectAll'}}
    </AkTypography>

    {{#if @selectAllCapturedApis.isRunning}}
      <AkLoader @size={{13}} class='ml-1' />
    {{/if}}
  </AkStack>
</AkStack>