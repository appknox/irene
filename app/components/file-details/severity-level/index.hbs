<AkStack
  class='p-3'
  @spacing='5'
  @justifyContent='center'
  @alignItems='center'
  @flexWrap='wrap'
>
  {{#if this.fetchUnknownAnalysisStatus.isRunning}}
    <AkStack {{style height='200px'}} @alignItems='center' @spacing='1.5'>
      <AkLoader @size={{16}} />

      <AkTypography>
        {{t 'loading'}}...
      </AkTypography>
    </AkStack>
  {{else}}
    <AkChart
      {{style maxWidth='350px'}}
      @width='100%'
      @height='200px'
      @option={{this.option}}
      data-test-fileDetailSeverityLevel-chart
    />

    <AkStack
      {{style maxWidth='350px' flex='1'}}
      @direction='column'
      @spacing='1'
    >
      {{#each this.severityLevelCounts as |slc|}}
        <AkStack
          @width='full'
          @justifyContent='space-between'
          @alignItems='center'
          data-test-fileDetailSeverityLevel-severityCountGroup='{{slc.name}}'
        >
          <AkStack @alignItems='center' @spacing='2.5'>
            <div
              local-class='severity-indicator severity-{{slc.severityType}}'
              data-test-fileDetailSeverityLevel-severityCountIndicator
            />

            <AkTypography
              data-test-fileDetailSeverityLevel-severityCountName
            >{{slc.name}}</AkTypography>
          </AkStack>

          <AkTypography
            data-test-fileDetailSeverityLevel-severityCountValue
            class='px-2'
            @variant='subtitle1'
          >
            {{slc.value}}
          </AkTypography>
        </AkStack>

        {{#if (not-eq slc this.severityLevelCounts.lastObject)}}
          <AkDivider />
        {{/if}}
      {{/each}}
    </AkStack>
  {{/if}}
</AkStack>