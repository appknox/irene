<AkStack
  @alignItems='center'
  @spacing='1'
  data-test-privacyModule-pii-data-value-container
>
  <PrivacyModule::UnreadMark @highlight={{this.highlight}} />

  <AkTypography data-test-privacyModule-pii-data-value>
    {{this.value}}
  </AkTypography>

  {{#if this.showChip}}
    <AkChip
      @label={{this.chipValue}}
      @size='small'
      @variant='semi-filled-outlined'
      data-test-privacyModule-pii-data-value-chip
    />
  {{/if}}
</AkStack>