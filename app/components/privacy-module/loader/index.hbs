<AkStack
  ...attributes
  @direction='column'
  @alignItems='center'
  local-class='loading'
  class='pt-7'
>
  <AkSvg::EmptyLoadingList local-class='loading-state-vector' />

  <AkStack @alignItems='center' @spacing='1.5' class='mt-2'>
    <AkLoader data-test-privacyModule-loader @size={{19}} />

    <AkTypography
      data-test-privacyModule-loadingText
      local-class='loading-text'
    >
      {{@loadingText}}
    </AkTypography>
  </AkStack>
</AkStack>