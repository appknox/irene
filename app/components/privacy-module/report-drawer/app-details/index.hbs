<AkStack local-class='app-details-container' @direction='column' @spacing='1.5'>
  <AkStack @spacing='1.5'>
    <AppLogo @src={{@file.iconUrl}} @role='none' />

    <PrivacyModule::AppPlatform
      @file={{@file}}
      @project={{@project}}
      @bordered={{true}}
    />
  </AkStack>

  <AkStack @direction='column' @spacing='0.5'>
    <AkTypography data-test-privacyReportDrawer-appName @variant='h5'>
      {{this.appName}}
    </AkTypography>

    <AkTypography
      data-test-privacyReportDrawer-appPackageName
      @variant='h6'
      @color='textSecondary'
    >
      {{this.appPackageName}}
    </AkTypography>
  </AkStack>

  <AkTypography data-test-privacyReportDrawer-description>
    {{t 'privacyModule.downloadReportDescription'}}
  </AkTypography>
</AkStack>