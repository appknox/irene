{{#if @isActive}}
  <AkModal
    @showHeader={{true}}
    @headerTitle={{this.headerTitle}}
    @disableClose={{@disabled}}
    @onClose={{perform this.clearModal}}
    @blurOverlay={{@blurOverlay}}
  >
    <AkStack @direction='column' @alignItems='center' @justifyContent='center'>
      {{#if (has-block 'content')}}
        {{yield to='content'}}
      {{else if @description}}
        <AkTypography data-test-confirmbox-description>
          {{@description}}
        </AkTypography>
      {{/if}}

      <AkStack
        @alignItems='center'
        @justifyContent={{this.justifyActionContent}}
        @spacing='2'
        @width='full'
        class='mt-3'
      >
        <AkButton
          data-test-confirmbox-confirmBtn
          @loading={{@disabled}}
          {{on 'click' (perform this.sendCallback)}}
        >
          {{this.confirmText}}
        </AkButton>

        <AkButton
          data-test-confirmbox-cancelBtn
          @variant='outlined'
          @color='neutral'
          @disabled={{@disabled}}
          {{on 'click' (perform this.clearModal)}}
        >
          {{this.cancelText}}
        </AkButton>
      </AkStack>
    </AkStack>
  </AkModal>
{{/if}}