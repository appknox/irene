<AkStack @direction='column' @spacing='1.5' @width='full'>
  <AkStack @width='full' @alignItems='center' @justifyContent='space-between'>
    <AkSkeleton @height='34px' @width='300px' />

    <AkSkeleton @height='34px' @width='250px' />
  </AkStack>

  {{#let (array 1 3 2 4 3) as |loadingSections|}}
    {{#each loadingSections as |section|}}
      <AkStack
        @direction='column'
        @width='full'
        @justifyContent='space-between'
        @spacing='2'
      >
        {{#let (this.getWidth section 0.3 0.4) as |width|}}
          <AkSkeleton @height='20px' @width={{width}} />
        {{/let}}

        {{#let (this.getArray section) as |subSection|}}
          {{#each subSection}}
            <AkStack @spacing='1' @alignItems='center' @width='full'>
              <AkSkeleton @variant='circular' @height='10px' @width='10px' />

              {{#let (this.getWidth section) as |width|}}
                <AkSkeleton @height='18px' @width={{width}} />
              {{/let}}
            </AkStack>
          {{/each}}
        {{/let}}
      </AkStack>
    {{/each}}
  {{/let}}
</AkStack>