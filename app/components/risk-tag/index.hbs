{{#if this.riskLabelAndClassExists}}
  <AkStack
    ...attributes
    local-class='risk-tag {{@labelClass}}'
    data-test-analysisRiskTag-root='{{@label}}'
  >
    <AkTypography
      local-class='risk-tag-label'
      @tag='span'
      data-test-analysisRiskTag-label
    >
      {{@label}}
    </AkTypography>
  </AkStack>
{{else}}
  <AkStack
    local-class='risk-tag {{this.analysisRiskStatus.cssclass}}'
    @spacing='0.5'
    data-test-analysisRiskTag-root='{{this.analysisRiskStatus.label}}'
  >
    {{#if this.isNonPassedRiskOverridden}}
      <AkTooltip
        @color='dark'
        @arrow={{true}}
        @title='{{t "overriddenRisk"}}, {{t "orginalRisk"}}:{{t
          (risk-text @analysis.risk)
        }}'
        @placement='bottom'
      >
        <AkIcon
          data-test-analysisRiskTag-editIcon
          local-class='risk-tag-icon'
          @iconName='edit'
        />
      </AkTooltip>
    {{/if}}

    <AkTypography
      local-class='risk-tag-label'
      @tag='span'
      data-test-analysisRiskTag-label
    >
      {{this.analysisRiskStatus.label}}
    </AkTypography>
  </AkStack>
{{/if}}