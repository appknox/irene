<div class="invitations">
  <div local-class="header">
    <h3 local-class="title">{{t "pendingInvitations"}}</h3>
    <Partner::InviteClient />
  </div>
  {{#if this.objects}}
    <div data-test-invitations-list>
      <div local-class="table">
        <div local-class="table-header">
          <div class="bold">Invitee</div>
          <div class="bold">Company</div>
          <div class="bold">Invited</div>
          <div class="bold">Expires on</div>
          <div class="bold">Source</div>
          <div class="bold">Resend</div>
          <div class="bold">Delete</div>
        </div>
        <div local-class="table-body">
          {{#each this.objects as |request|}}
            <div local-class="table-row" data-test-invitations-row>
              <Partner::Invitation
                @request={{request}}
                @onResend={{this.onResend}}
                @onDelete={{this.onDelete}}
                data-test-invitation-id={{request.id}}
              />
            </div>
          {{/each}}
        </div>
      </div>
      {{#if (or this.hasPrevious this.hasNext)}}
        <div local-class="pagination">
          {{partial "paginate"}}
        </div>
      {{/if}}
    </div>
  {{else if this.error}}
    <div local-class="loading-error">Error: Could not load data</div>
  {{else if this.isLoading}}
    <div local-class="loading">
      <ThreeBounceSpinner />
    </div>
  {{else}}
    <div local-class="empty-data">No invitations</div>
  {{/if}}
</div>