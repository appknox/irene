<button
  class="is-primary button vertical-align-center"
  type="button"
  data-test-invite-client-button
  {{on "click" (fn this.toggleInviteModal)}}
>
  {{fa-icon "envelope"}}&nbsp;
  {{t "inviteClients"}}
</button>

{{#if this.showInviteModal}}
  <AkModal @onClose={{this.toggleInviteModal}} @showHeader={{true}} @headerTitle={{t "inviteClient"}}>
    <div local-class="invite-container" data-test-invite-client-form {{did-insert this.initForm}}>
      <div class="input-wrap margin-t-q {{if this.changeset.error.email "has-error"}}">
        <div class="label-error">
          <label for="registration-input-email">
            {{t "email"}}
            <sup local-class="required-marker">*</sup>
          </label>
          {{#if this.changeset.error.email}}
            <span class="error-msg" data-test-input-error-email>{{this.changeset.error.email.validation}}</span>
          {{/if}}
        </div>
        <Input
          type="text"
          class="input-field"
          placeholder="{{t "email"}}"
          autocomplete="email"
          autofocus="autofocus"
          required="required"
          @id="registration-input-email"
          @value={{this.changeset.email}}
          data-test-input-email
        />
      </div>

      <div class="input-wrap">
        <div class="label-error">
          <label for="registration-input-firstname">{{t "name"}}</label>
          {{#if (or this.changeset.error.first_name this.changeset.error.last_name)}}
            <span class="error-msg" data-test-input-error-name>{{this.changeset.error.first_name.validation}}
              {{this.changeset.error.last_name.validation}}</span>
          {{/if}}
        </div>
        <div class="half-wrap">
          <Input
            type="text"
            class="input-field {{if this.changeset.error.first_name "has-error"}}"
            placeholder="First Name"
            autocomplete="fname"
            required="required"
            @id="registration-input-firstname"
            @value={{this.changeset.first_name}}
            data-test-input-firstname
          />
          <Input
            type="text"
            class="input-field {{if this.changeset.error.last_name "has-error"}}"
            placeholder="Last Name"
            autocomplete="lname"
            @id="registration-input-lastname"
            @value={{this.changeset.last_name}}
            required="required"
            data-test-input-lastname
          />
        </div>
      </div>

      <div class="input-wrap {{if this.changeset.error.company "has-error"}}" data-test-input-container="company">
        <div class="label-error">
          <label for="registration-input-company">
            {{t "companyName"}}
            <sup local-class="required-marker">*</sup>
          </label>
          {{#if this.changeset.error.company}}
            <span class="error-msg" data-test-input-error-company>{{this.changeset.error.company.validation}}</span>
          {{/if}}
        </div>
        <Input
          class="input-field"
          placeholder="{{t "companyName"}}"
          autocomplete="company"
          required="required"
          @value={{this.changeset.company}}
          @id="registration-input-company"
          data-test-input-company
        />
      </div>

      <div local-class="submit">
        <button
          type="button"
          class="button is-primary highlighted-button"
          data-test-input-send-btn
          {{on "click" (fn this.sendInvitation this.changeset)}}
        >{{fa-icon "send"}}&nbsp; {{t "sendInvitation"}}</button>
      </div>
    </div>
  </AkModal>
{{/if}}