<div local-class="clent-uploads-container">
  <h5 local-class="title">{{t 'allUploads'}} ({{this.totalCount}})</h5>
  <div local-class="table">
    <div local-class="header">
      <div>{{t 'app'}}</div>
      <div>{{t 'platform'}}</div>
      <div>{{t 'version'}}</div>
      <div>{{t 'uploaded'}}</div>
    </div>
    <div local-class="body">
      {{#each this.uploads as |upload|}}
        <div local-class="row">
          <div local-class="app">
            <div local-class="app-icon" style={{upload.iconHtmlUrl}}></div>
            <div local-class="app-info">
              <span local-class="app-name">{{upload.name}}</span>
              <span local-class="app-package">{{upload.project.package_name}}</span>
            </div>
          </div>
          <div local-class="platform">
            {{fa-icon upload.platformIcon}}
          </div>
          <div local-class="version">
            <span>{{t 'version'}}: {{upload.version}}</span>
            <span>{{t 'versionCode'}}: {{upload.versionCode}}</span>
          </div>
          <div local-class="uploaded">{{dayjs-from-now upload.createdOn}}</div>
        </div>
      {{else if this.isLoading}}
        <div local-class="center-msg">
          <ThreeBounceSpinner></ThreeBounceSpinner>
        </div>
      {{else}}
        <div local-class="center-msg">{{t 'noUpload'}}</div>
      {{/each}}
    </div>
    {{#if (or this.hasPrevious this.hasNext)}}
      <div local-class="pagination">
        {{partial 'paginate'}}
      </div>
    {{/if}}
  </div>

</div>