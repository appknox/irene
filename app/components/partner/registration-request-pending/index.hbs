<div local-class="pending-request">
  <div local-class="user">
    <div local-class="email">{{@request.email}}</div>
    <div local-class="name" class="text-lightgray">{{@request.fullName}}</div>
  </div>
  <div local-class="company">{{@request.data.company}}</div>
  <div local-class="date" class="text-lightgray" title="{{day-js date=@request.createdOn format='DD MMM YYYY HH:mm A'}}">{{dayjs-from-now @request.createdOn}}</div>
  <div local-class="action">
    <button class="is-success is-icon no-border no-hover-button" local-class="approveRequest" title="Send invite mail" {{on "click" (perform this.approveRequest @request)}}>{{fa-icon "check"}}</button>
  </div>
  <div local-class="action">
    <button class="is-primary is-icon no-border no-hover-button" local-class="rejectRequest" title="Reject request" {{on "click" (perform this.rejectRequest @request)}}>{{fa-icon "remove"}}</button>
  </div>
</div>