<div local-class="rejected-request">
  <div local-class="user">
    <div local-class="email">{{@request.email}}</div>
    <div local-class="name" class="text-lightgray">{{@request.fullName}}</div>
  </div>
  <div local-class="company">{{@request.data.company}}</div>
  <div local-class="date" class="text-lightgray" title="{{day-js date=@request.createdOn format='DD MMM YYYY HH:mm A'}}">{{dayjs-from-now @request.createdOn}}</div>
  <div local-class="date" class="text-lightgray" title="{{day-js date=@request.updatedOn format='DD MMM YYYY HH:mm A'}}">{{dayjs-from-now @request.updatedOn}}</div>
  <div local-class="action">
    <button
      type="button"
      class="is-danger is-icon no-border no-hover-button"
      local-class="reject" title="Move back to pending"
      {{on "click" (fn @onUndoReject @request)}}
    >{{fa-icon "undo"}}</button>
  </div>
</div>