<div class="pending-registration-requests">
  <h3 local-class="title">{{t "pendingRequests"}}</h3>
  {{#if this.requests}}
    <div>
      <div local-class="table">
        <div local-class="table-header">
          <div class="bold">Requested by</div>
          <div class="bold">Company</div>
          <div class="bold">Requested</div>
          <div class="bold">Invite</div>
          <div class="bold">Reject</div>
        </div>
        <div local-class="table-body">
          {{#each this.requests as |request|}}
            <div local-class="table-row">
              <Partner::RegistrationRequestPending @request={{request}}></Partner::RegistrationRequestPending>
            </div>
          {{/each}}
        </div>
      </div>
      {{#if (or this.hasPrevious this.hasNext)}}
        <div local-class="pagination">
          {{partial 'paginate'}}
        </div>
      {{/if}}
    </div>
  {{else if this.isLoading}}
    <div local-class="loading">
      <ThreeBounceSpinner></ThreeBounceSpinner>
    </div>
  {{else}}
    <div local-class="empty-data">No pending requests</div>
  {{/if}}
</div>
