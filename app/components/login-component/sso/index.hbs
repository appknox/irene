{{#if @isEnforced}}
  <form ...attributes onsubmit='return false'>
    <div
      class='{{local-class
          "input-group"
          from='irene/components/login-component/index.scss'
        }}'
    >
      <label
        for='login-username'
        class='{{local-class
            "input-label"
            from='irene/components/login-component/index.scss'
          }}'
      >
        <AkIcon @iconName='person' class='input-icon' />
      </label>
      <Input
        data-test-login-sso-forced-username-input
        class='{{local-class
            "input input-connect-label"
            from='irene/components/login-component/index.scss'
          }}'
        placeholder='Username / Email'
        id='login-username'
        autofocus='autofocus'
        autocomplete='username'
        @value={{@username}}
        {{on 'input' @usernameChanged}}
      />
    </div>
    <button
      data-test-login-sso-forced-button
      class='button'
      local-class='login-form-sso-button'
      type='submit'
      {{on 'click' @ssologin}}
      {{autofocus}}
    >
      {{#if @showSSOSpinner}}
        <AkLoader />
      {{/if}}
      <span
        class='{{local-class
            "login-button-text"
            from='irene/components/login-component/index.scss'
          }}'
      >{{t 'ssoLogin'}}</span>
    </button>
  </form>
{{else}}
  <LoginComponent::Login
    @username={{@username}}
    @password={{@password}}
    @usernameChanged={{@usernameChanged}}
    @showSpinner={{@showLoginSpinner}}
    @login={{@login}}
    data-test-login-sso-not-forced-login
  />
  <div data-test-login-sso-or local-class='login-form-sso-separator'>
    <div local-class='login-form-sso-separator-or'>
      {{t 'or'}}
    </div>
  </div>
  <button
    data-test-login-sso-not-forced-button
    aria-label='login-using-sso-submit-button'
    class='button'
    local-class='login-form-sso-button'
    type='button'
    {{on 'click' @ssologin}}
  >
    {{#if @showSSOSpinner}}
      <AkLoader />
    {{/if}}
    <span
      class='{{local-class
          "login-button-text"
          from='irene/components/login-component/index.scss'
        }}'
    >{{t 'ssoLogin'}}</span>
  </button>
{{/if}}