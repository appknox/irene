<form ...attributes onsubmit='return false'>
  <div
    class='{{local-class
        "input-group"
        from='irene/components/login-component/index.scss'
      }}'
  >
    <label
      for='login-username'
      class='{{local-class
          "input-label"
          from='irene/components/login-component/index.scss'
        }}'
    >
      <AkIcon @iconName='person' class='input-icon' />
    </label>
    <Input
      data-test-login-check-username-input
      class='{{local-class
          "input input-connect-label"
          from='irene/components/login-component/index.scss'
        }}'
      placeholder='Username / Email'
      id='login-username'
      autofocus='autofocus'
      autocomplete='username'
      @value={{@username}}
      {{autofocus}}
    />
    <AkIconButton
      data-test-login-check-button
      class='button is-primary highlighted-button margin-l-h'
      {{on 'click' @check}}
    >
      {{#if @showSpinner}}
        <div
          class='{{local-class
              "ak-button-loader"
              from='irene/components/login-component/index.scss'
            }}'
        >
          <AkLoader @size={{13}} />
        </div>
      {{else}}
        <AkIcon @iconName='arrow-forward' @size='medium' />
      {{/if}}
    </AkIconButton>
  </div>
</form>