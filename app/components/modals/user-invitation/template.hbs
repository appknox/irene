<div local-class="invite-container" {{did-insert this.initializeCompo}}>
  <div data-test-input-container="first-name" local-class="firstname input-container">
    <label local-class="label" for="firstname">{{t 'firstName'}}</label>
    <Input data-test-input="first_name" id="firstname" placeholder="First name" autocomplete="off"
      @value={{mut (get this.changeset "first_name")}} local-class="input" />
  </div>

  <div data-test-input-container="last-name" local-class="lastname input-container">
    <label local-class="label" for="lastname">{{t 'lastName'}}</label>
    <Input data-test-input="last_name" id="lastname" placeholder="Last name" autocomplete="off"
      @value={{mut (get this.changeset "last_name")}} />
  </div>


  <div data-test-input-container="email" local-class="email input-container {{if this.changeset.error.email 'error'}}">
    <label local-class="label"
      for="email">{{t 'email'}}<sup>{{fa-icon "asterisk" local-class="asterisk-icon"}}</sup></label>
    <Input data-test-input="email" id="email" placeholder="Email" autocomplete="off"
      @value={{mut (get this.changeset "email")}} local-class="input" />
    {{#if this.changeset.error.email}}
      <span data-test-input-error="email" local-class="error"> {{this.changeset.error.email.validation}}</span>
    {{/if}}
  </div>

  <div data-test-input-container="company"
    local-class="company input-container {{if this.changeset.error.company 'error'}}">
    <label local-class="label"
      for="user-company">{{t "companyName"}}<sup>{{fa-icon "asterisk" local-class="asterisk-icon"}}</sup></label>
    <Input data-test-input="company" id="user-company" placeholder="Company" autocomplete="off"
      @value={{mut (get this.changeset "company")}} local-class="input" />
    {{#if this.changeset.error.company}}
      <span data-test-input-error="company" local-class="error"> {{this.changeset.error.company.validation}}</span>
    {{/if}}
  </div>


  <button data-test-input-btn="send" local-class="submit" type="button" class="is-primary"
    {{on "click" (perform this.sendInvitation)}}>{{t "sendInvitation"}}</button>
</div>