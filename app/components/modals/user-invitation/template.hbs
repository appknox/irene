<div local-class="invite-container" {{did-insert this.initializeCompo}}>

  <div class="input-wrap margin-t-q {{if this.changeset.error.email "has-error"}}">
    <div class="label-error">
      <label for="registration-input-email">{{t "email"}}<sup local-class="required-marker">*</sup></label>
      {{#if this.changeset.error.email}}
        <span data-test-input-error="email" class="error-msg">{{this.changeset.error.email.validation}}</span>
      {{/if}}
    </div>
    <Input data-test-input="email" @id="registration-input-email" @value={{this.changeset.email}} type="text"
      class="input-field" placeholder="{{t "email"}}" autocomplete="email" autofocus="autofocus" required="required" />
  </div>

  <div class="input-wrap">
    <div class="label-error">
      <label for="registration-input-firstname">{{ t "name" }}</label>
    </div>
    <div class="half-wrap">
      <Input data-test-input="first_name" type="text" @id="registration-input-firstname" class="input-field"
        placeholder="First Name" autocomplete="fname" @value={{this.changeset.first_name}} required="required" />
      <Input data-test-input="last_name" type="text" @id="registration-input-lastname" class="input-field"
        placeholder="Last Name" autocomplete="lname" @value={{this.changeset.last_name}} required="required" />
    </div>
  </div>

  <div data-test-input-container="company" class="input-wrap {{if this.changeset.error.company "has-error"}}">
    <div class="label-error">
      <label for="registration-input-company">{{t "companyName"}}<sup local-class="required-marker">*</sup></label>
      {{#if this.changeset.error.company}}
        <span data-test-input-error="company" class="error-msg">{{this.changeset.error.company.validation}}</span>
      {{/if}}
    </div>
    <Input data-test-input="company" @id="registration-input-company" class="input-field"
      placeholder="{{t "companyName"}}" @value={{this.changeset.company}} autocomplete="company"
      required="required"></Input>
  </div>

  <div local-class="submit">
    <button
      type="button"
      class="button is-primary highlighted-button"
      {{on "click" (perform this.sendInvitation)}}
      data-test-input-btn="send"
    >{{fa-icon "send"}}&nbsp; {{t "sendInvitation"}}</button>
  </div>
</div>