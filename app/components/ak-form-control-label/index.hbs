<label
  data-test-ak-form-label-root
  local-class='ak-form-control-label-root ak-form-control-label-placement-{{this.placement}}'
>
  {{yield (hash control=(component 'blank-template') disabled=@disabled)}}

  {{#if @label}}
    <span
      data-test-ak-form-label
      local-class='ak-form-control-label {{if
        @disabled
        "ak-form-control-label-disabled"
      }}'
    >{{@label}}</span>
  {{/if}}
</label>