.columns
  .column
    nav.pagination.is-centered
      if hasPrevious
        a.button.is-default click="gotoPageFirst"
          = ak-icon iconName="double-arrow-left"
          | &nbsp; #{ t "first" }
        a.button.is-default click="gotoPagePrevious"
          = ak-icon iconName="chevron-left"
          | &nbsp; #{ t "previous" }
      ul.pagination-list
        if preDot
          li ...
        each pages as |page|
          li{action "gotoPage" page}
            a.button class="{{paginate-class offset page}}"
              = page-number page
        if postDot
          li ...
      if hasNext
        a.button.is-default click="gotoPageNext"
          | #{ t "next" } &nbsp;
          = ak-icon iconName="chevron-right"
        a.button.is-default click="gotoPageLast"
          | #{ t "last" } &nbsp;
          = ak-icon iconName="double-arrow-right"
