h5 GitHub

if project.githubRepo
  h5
    = t "integratedGithub"
    code
      | &nbsp; #{project.githubRepo}
    .tag.is-danger.margin-top3.remove click="deleteGHProject"
      i.fa.risk-icons.fa-trash-o
        | &nbsp; #{t "remove"}

.columns
  .column.is-one-third
    select.select{action 'selectRepo' on='change'}
      if project.githubRepo
        option value=0
          = t "noPreference"
      each githubRepos as |repo|
        option value=repo
          = repo
