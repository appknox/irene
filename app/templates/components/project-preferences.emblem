h5 Device Preferences

if hasDevices
  .columns
    .column
      = t "deviceType"
  .columns
    .column.is-one-sixth
      select{action 'selectDeviceType' on='change'} id="project-device-preference"
        option value=0
          = t "noPreference"
        each deviceTypes as |deviceType|
          option value=deviceType.value
            | #{ t (device-type deviceType.value)}

    .column.margin-top5
       = t "selectedDevice"
       | : #{ t (device-type project.deviceType)}

  if hasUniqueDevices
    .columns
      .column
        = t "osVersion"
    .columns
      .column.is-one-sixth
        select{action 'selectVersion' on='change'} id="project-version-preference"
          option value=0
            = t "noPreference"
          each uniqueDevices as |device|
            option value=device.version
              = device.version

      .column.margin-top5
        = t "selectedVersion"
        | : #{project.versionText}

    .columns
      .column
        button.margin-top20.is-primary click="versionSelected"
          | Select the device
  else

    h6.margin-top20
      = t "noDeviceAvailable"

else

  h6.margin-top20
    = t "noDeviceAvailable"
