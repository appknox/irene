.columns.home-page
  .column.is-one-sixth.app-scanned
    h5.text-centre
      | App Scanned
    .columns
      .column.flex-center
        .rounded-graph.total-apps
          = analytics.totalScanCount
    .columns
      .column.flex-center
        = fa-icon "android"
        | &nbsp; + &nbsp;
        = fa-icon "apple"
    .columns
      .column.is-half
        .rounded-graph.android-apps
          = analytics.totalAndroidScanCount
      .column.is-half
        .rounded-graph.ios-apps
          = analytics.totalIosScanCount
    .columns
      .column.is-half.flex-center
        = fa-icon "android"
      .column.is-half.flex-center
        = fa-icon "apple"

/
/   .column
/     div class="chart-container"
/       = ember-chart type='bar' data=stat.scanChartData width=350 height=350 options=chartOptions

.columns.scan-counts
  .column.flex-center
    .columns
      .column.is-one-sixth
        = fa-icon "tasks"
      .column
        h3
          = analytics.staticScanCount
        h5
          | Static Scan

  .column.flex-center
    .columns
      .column.is-one-sixth
        = fa-icon "tasks"
      .column
        h3
          = analytics.dynamicScanCount
        h5
          | Dynamic Scan

  .column.flex-center
    .columns
      .column.is-one-sixth
        = fa-icon "tasks"
      .column
        h3
          = analytics.apiScanCount
        h5
          | API Scan

  .column.flex-center
    .columns
      .column.is-one-sixth
        = fa-icon "tasks"
      .column
        h3
          = analytics.manualScanCount
        h5
          | Manual Scan


