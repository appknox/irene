{{page-title 'Project Files'}}

<Partner::ClientsNav />

<div class='padding-h-1 padding-t-1h padding-b-2'>
  <LinkTo @route='authenticated.partner.clients'>{{t 'clients'}}</LinkTo>
  /
  <LinkTo @route='authenticated.partner.client' @model={{this.model.client.id}}>
    {{#if this.model.isEmptyTitle}}
      <em>{{t 'noName'}}</em>
    {{else}}
      {{this.model.client.name}}
    {{/if}}
  </LinkTo>

  /
  {{fa-icon this.model.project.platformIcon}}
  {{this.model.project.packageName}}
  {{outlet}}
</div>

<Partner::ClientUploadsList
  @clientId={{this.model.client.id}}
  @projectId={{this.model.project.id}}
/>
